  "verses": {
    "0": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
    "1": "إِذَا ٱلسَّمَآءُ ٱنفَطَرَتْ",
    "2": "وَإِذَا ٱلْكَوَاكِبُ ٱنتَثَرَتْ",
    "3": "وَإِذَا ٱلْبِحَارُ فُجِّرَتْ",
    "4": "وَإِذَا ٱلْقُبُورُ بُعْثِرَتْ",
    "5": "عَلِمَتْ نَفْسٌۭ مَّا قَدَّمَتْ وَأَخَّرَتْ",
    "6": "يَٰٓأَيُّهَا ٱلْإِنسَٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلْكَرِيمِ",
    "7": "ٱلَّذِى خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ",
    "8": "فِىٓ أَىِّ صُورَةٍۢ مَّا شَآءَ رَكَّبَكَ",
    "9": "كَلَّا بَلْ تُكَذِّبُونَ بِٱلدِّينِ",
    "10": "وَإِنَّ عَلَيْكُمْ لَحَٰفِظِينَ",
    "11": "كِرَامًۭا كَٰتِبِينَ",
    "12": "يَعْلَمُونَ مَا تَفْعَلُونَ",
    "13": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍۢ",
    "14": "وَإِنَّ ٱلْفُجَّارَ لَفِى جَحِيمٍۢ",
    "15": "يَصْلَوْنَهَا يَوْمَ ٱلدِّينِ",
    "16": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَ",
    "17": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
    "18": "ثُمَّ مَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
    "19": "يَوْمَ لَا تَمْلِكُ نَفْسٌۭ لِّنَفْسٍۢ شَيْـًۭٔا ۖ وَٱلْأَمْرُ يَوْمَئِذٍۢ لِّلَّهِ"
  }
