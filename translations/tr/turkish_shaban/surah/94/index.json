  "result": [
    {
      "id": "6091",
      "sura": "94",
      "aya": "1",
      "arabic_text": "أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ",
      "translation": " Senin göğsünü ferahlatıp, genişletmedik mi? ",
      "footnotes": null
    },
    {
      "id": "6092",
      "sura": "94",
      "aya": "2",
      "arabic_text": "وَوَضَعۡنَا عَنكَ وِزۡرَكَ",
      "translation": " Yükünü üzerinden indirmedik mi? ",
      "footnotes": null
    },
    {
      "id": "6093",
      "sura": "94",
      "aya": "3",
      "arabic_text": "ٱلَّذِيٓ أَنقَضَ ظَهۡرَكَ",
      "translation": " Ki o belini bükmüştü.",
      "footnotes": null
    },
    {
      "id": "6094",
      "sura": "94",
      "aya": "4",
      "arabic_text": "وَرَفَعۡنَا لَكَ ذِكۡرَكَ",
      "translation": " Şanını yükseltmedik mi?",
      "footnotes": null
    },
    {
      "id": "6095",
      "sura": "94",
      "aya": "5",
      "arabic_text": "فَإِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًا",
      "translation": " Şüphesiz her zorlukla, bir kolaylık vardır.",
      "footnotes": null
    },
    {
      "id": "6096",
      "sura": "94",
      "aya": "6",
      "arabic_text": "إِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرٗا",
      "translation": " Her zorlukla bir kolaylık vardır.",
      "footnotes": null
    },
    {
      "id": "6097",
      "sura": "94",
      "aya": "7",
      "arabic_text": "فَإِذَا فَرَغۡتَ فَٱنصَبۡ",
      "translation": " Öyleyse boş kaldın mı hemen (ibadetle) yorul.",
      "footnotes": null
    },
    {
      "id": "6098",
      "sura": "94",
      "aya": "8",
      "arabic_text": "وَإِلَىٰ رَبِّكَ فَٱرۡغَب",
      "translation": " Yalnız Rabbine rağbet et. ",
      "footnotes": null
    }
  ]
}