  "result": [
    {
      "id": "6198",
      "sura": "107",
      "aya": "1",
      "arabic_text": "أَرَءَيۡتَ ٱلَّذِي يُكَذِّبُ بِٱلدِّينِ",
      "translation": " Hesap gününü yalanlayanı gördün mü?",
      "footnotes": null
    },
    {
      "id": "6199",
      "sura": "107",
      "aya": "2",
      "arabic_text": "فَذَٰلِكَ ٱلَّذِي يَدُعُّ ٱلۡيَتِيمَ",
      "translation": " Yetimi itip kakan işte odur.",
      "footnotes": null
    },
    {
      "id": "6200",
      "sura": "107",
      "aya": "3",
      "arabic_text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلۡمِسۡكِينِ",
      "translation": " Düşkünü doyurmaya teşvik etmez.",
      "footnotes": null
    },
    {
      "id": "6201",
      "sura": "107",
      "aya": "4",
      "arabic_text": "فَوَيۡلٞ لِّلۡمُصَلِّينَ",
      "translation": " Öyleyse yazıklar olsun o namaz kılanlara!",
      "footnotes": null
    },
    {
      "id": "6202",
      "sura": "107",
      "aya": "5",
      "arabic_text": "ٱلَّذِينَ هُمۡ عَن صَلَاتِهِمۡ سَاهُونَ",
      "translation": " Kıldıkları namazdan gafil olanlara,",
      "footnotes": null
    },
    {
      "id": "6203",
      "sura": "107",
      "aya": "6",
      "arabic_text": "ٱلَّذِينَ هُمۡ يُرَآءُونَ",
      "translation": " Gösteriş yapanlara,",
      "footnotes": null
    },
    {
      "id": "6204",
      "sura": "107",
      "aya": "7",
      "arabic_text": "وَيَمۡنَعُونَ ٱلۡمَاعُونَ",
      "translation": " Ufak tefek (ödünç vermeye) bile engel olanlara…",
      "footnotes": null
    }
  ]
}