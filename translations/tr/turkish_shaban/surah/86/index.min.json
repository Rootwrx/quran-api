{
  "verses": [
    {
      "number": "1",
      "arabic_text": "وَٱلسَّمَآءِ وَٱلطَّارِقِ",
      "translation": " Göğe ve Tarık’a andolsun ki."
    },
    {
      "number": "2",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلطَّارِقُ",
      "translation": " Tarık’ı sana bildiren nedir?"
    },
    {
      "number": "3",
      "arabic_text": "ٱلنَّجۡمُ ٱلثَّاقِبُ",
      "translation": "(Karanlığı) Delen yıldızdır."
    },
    {
      "number": "4",
      "arabic_text": "إِن كُلُّ نَفۡسٖ لَّمَّا عَلَيۡهَا حَافِظٞ",
      "translation": " Üzerinde gözetici bulunmayan hiç kimse yoktur."
    },
    {
      "number": "5",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ مِمَّ خُلِقَ",
      "translation": " Öyleyse, insan neden yaratıldığına bir baksın."
    },
    {
      "number": "6",
      "arabic_text": "خُلِقَ مِن مَّآءٖ دَافِقٖ",
      "translation": " Atılan bir sudan yaratılmıştır."
    },
    {
      "number": "7",
      "arabic_text": "يَخۡرُجُ مِنۢ بَيۡنِ ٱلصُّلۡبِ وَٱلتَّرَآئِبِ",
      "translation": " O, bel ile göğüs kemikleri arasından çıkan…"
    },
    {
      "number": "8",
      "arabic_text": "إِنَّهُۥ عَلَىٰ رَجۡعِهِۦ لَقَادِرٞ",
      "translation": " Allah, onu yeniden yaratmaya elbette kadirdir."
    },
    {
      "number": "9",
      "arabic_text": "يَوۡمَ تُبۡلَى ٱلسَّرَآئِرُ",
      "translation": " Sırların açığa çıktığı gün."
    },
    {
      "number": "10",
      "arabic_text": "فَمَا لَهُۥ مِن قُوَّةٖ وَلَا نَاصِرٖ",
      "translation": " İnsanın bir gücü ve bir yardımcısı yoktur."
    },
    {
      "number": "11",
      "arabic_text": "وَٱلسَّمَآءِ ذَاتِ ٱلرَّجۡعِ",
      "translation": " Yağmur yağdıran göğe,"
    },
    {
      "number": "12",
      "arabic_text": "وَٱلۡأَرۡضِ ذَاتِ ٱلصَّدۡعِ",
      "translation": " Çatlayan toprağa andolsun ki,"
    },
    {
      "number": "13",
      "arabic_text": "إِنَّهُۥ لَقَوۡلٞ فَصۡلٞ",
      "translation": " Kesinlikle o ayırdedici bir sözdür."
    },
    {
      "number": "14",
      "arabic_text": "وَمَا هُوَ بِٱلۡهَزۡلِ",
      "translation": " O, şaka değildir."
    },
    {
      "number": "15",
      "arabic_text": "إِنَّهُمۡ يَكِيدُونَ كَيۡدٗا",
      "translation": " Onlar ise tuzak kurup duruyorlar."
    },
    {
      "number": "16",
      "arabic_text": "وَأَكِيدُ كَيۡدٗا",
      "translation": " Ben de bir tuzak kuruyorum."
    },
    {
      "number": "17",
      "arabic_text": "فَمَهِّلِ ٱلۡكَٰفِرِينَ أَمۡهِلۡهُمۡ رُوَيۡدَۢا",
      "translation": " Kâfirlere mühlet ver, onlara biraz süre tanı!"
    }
  ]
}