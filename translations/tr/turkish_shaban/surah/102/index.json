  "result": [
    {
      "id": "6169",
      "sura": "102",
      "aya": "1",
      "arabic_text": "أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ",
      "translation": " Çoklukla övünmek sizi oyaladı.",
      "footnotes": null
    },
    {
      "id": "6170",
      "sura": "102",
      "aya": "2",
      "arabic_text": "حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ",
      "translation": " Mezarlara (ölüp) gelinceye dek. ",
      "footnotes": null
    },
    {
      "id": "6171",
      "sura": "102",
      "aya": "3",
      "arabic_text": "كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": " Hayır! İleride bileceksiniz.",
      "footnotes": null
    },
    {
      "id": "6172",
      "sura": "102",
      "aya": "4",
      "arabic_text": "ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": " Yine hayır, ileride bileceksiniz.",
      "footnotes": null
    },
    {
      "id": "6173",
      "sura": "102",
      "aya": "5",
      "arabic_text": "كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ",
      "translation": " Hayır! Kesin bir bilgiyle bilseniz (kaçınırdınız).",
      "footnotes": null
    },
    {
      "id": "6174",
      "sura": "102",
      "aya": "6",
      "arabic_text": "لَتَرَوُنَّ ٱلۡجَحِيمَ",
      "translation": " Elbette Cehennem'i görürsünüz.",
      "footnotes": null
    },
    {
      "id": "6175",
      "sura": "102",
      "aya": "7",
      "arabic_text": "ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ",
      "translation": " Nitekim onu, yakın bir gözle göreceksiniz",
      "footnotes": null
    },
    {
      "id": "6176",
      "sura": "102",
      "aya": "8",
      "arabic_text": "ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ",
      "translation": " Sonra, o gün nimetlerden hesaba çekileceksiniz.",
      "footnotes": null
    }
  ]
}