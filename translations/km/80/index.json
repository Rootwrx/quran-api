{
  "result": [
    {
      "id": "5759",
      "sura": "80",
      "aya": "1",
      "arabic_text": "عَبَسَ وَتَوَلَّىٰٓ",
      "translation": "គាត់(មូហាំម៉ាត់)បានធ្វើមុខក្រញូវ ហើយងាកមុខចេញ",
      "footnotes": ""
    },
    {
      "id": "5760",
      "sura": "80",
      "aya": "2",
      "arabic_text": "أَن جَآءَهُ ٱلۡأَعۡمَىٰ",
      "translation": "ពីព្រោះមានជនពិការភ្នែកម្នាក់បានចូលមកជួបគាត់។",
      "footnotes": ""
    },
    {
      "id": "5761",
      "sura": "80",
      "aya": "3",
      "arabic_text": "وَمَا يُدۡرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
      "translation": "តើអ្នក(មូហាំម៉ាត់)អាចដឹងយ៉ាងដូមេ្ដចបាន? ជួនកាល គេអាចមកសំអាតខ្លួន។",
      "footnotes": ""
    },
    {
      "id": "5762",
      "sura": "80",
      "aya": "4",
      "arabic_text": "أَوۡ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكۡرَىٰٓ",
      "translation": "ឬក៏គេចង់បានការក្រើនរំលឹកហើយការក្រើនរំលឹកនោះ អាចផ្ដល់ផលប្រយោជន៍ដល់គេ ។",
      "footnotes": ""
    },
    {
      "id": "5763",
      "sura": "80",
      "aya": "5",
      "arabic_text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ",
      "translation": "រីឯអ្នកដែលមានទ្រព្យសម្បត្ដិគ្រប់គ្រាន់ (មិនត្រូវការ ការចង្អុលបង្ហាញពីអ្នក)",
      "footnotes": ""
    },
    {
      "id": "5764",
      "sura": "80",
      "aya": "6",
      "arabic_text": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
      "translation": "អ្នកបែរជាយកចិត្ដទុកដាក់ចំពោះគេទៅវិញ។",
      "footnotes": ""
    },
    {
      "id": "5765",
      "sura": "80",
      "aya": "7",
      "arabic_text": "وَمَا عَلَيۡكَ أَلَّا يَزَّكَّىٰ",
      "translation": "ហើយមានបញ្ហាអ្វីចំពោះអ្នក(មូហាំម៉ាត់) ប្រសិនបើគេ សំអាតខ្លួន (ពីភាពគ្មានជំនឿ)នោះ?",
      "footnotes": ""
    },
    {
      "id": "5766",
      "sura": "80",
      "aya": "8",
      "arabic_text": "وَأَمَّا مَن جَآءَكَ يَسۡعَىٰ",
      "translation": "ចំណែកឯអ្នកដែលបានមកជួបអ្នកដើម្បីសុំការចង្អុល បង្ហាញផ្លូវល្អ",
      "footnotes": ""
    },
    {
      "id": "5767",
      "sura": "80",
      "aya": "9",
      "arabic_text": "وَهُوَ يَخۡشَىٰ",
      "translation": "ហើយគេកោតខ្លាចអល់ឡោះនោះ",
      "footnotes": ""
    },
    {
      "id": "5768",
      "sura": "80",
      "aya": "10",
      "arabic_text": "فَأَنتَ عَنۡهُ تَلَهَّىٰ",
      "translation": "អ្នកបែរជាព្រងើយកន្ដើយចំពោះគេទៅវិញ។",
      "footnotes": ""
    },
    {
      "id": "5769",
      "sura": "80",
      "aya": "11",
      "arabic_text": "كَلَّآ إِنَّهَا تَذۡكِرَةٞ",
      "translation": "ចូរអ្នកកុំធ្វើបែបនេះ។ ពិតប្រាកដណាស់ វា(អាយ៉ាត់ ទាំងនេះ)គឺជាការក្រើនរំលឹក។",
      "footnotes": ""
    },
    {
      "id": "5770",
      "sura": "80",
      "aya": "12",
      "arabic_text": "فَمَن شَآءَ ذَكَرَهُۥ",
      "translation": "ដូចេ្នះអ្នកណាហើយមានបំណង គេពិតជានឹងយកវា (គម្ពីរគួរអាន)ធ្វើជាមេរៀន។",
      "footnotes": ""
    },
    {
      "id": "5771",
      "sura": "80",
      "aya": "13",
      "arabic_text": "فِي صُحُفٖ مُّكَرَّمَةٖ",
      "translation": "ដែលមាននៅក្នុងគម្ពីរដែលត្រូវបានគេលើកតម្កើង។",
      "footnotes": ""
    },
    {
      "id": "5772",
      "sura": "80",
      "aya": "14",
      "arabic_text": "مَّرۡفُوعَةٖ مُّطَهَّرَةِۭ",
      "translation": "ប្រកបដោយភាពខ្ពង់ខ្ពស់ ព្រមទាំងជ្រះស្អាត។",
      "footnotes": ""
    },
    {
      "id": "5773",
      "sura": "80",
      "aya": "15",
      "arabic_text": "بِأَيۡدِي سَفَرَةٖ",
      "translation": "ដែលនៅនឹងដៃអ្នកដែលសរសេរសារ(ម៉ាឡាអ៊ីកាត់)",
      "footnotes": ""
    },
    {
      "id": "5774",
      "sura": "80",
      "aya": "16",
      "arabic_text": "كِرَامِۭ بَرَرَةٖ",
      "translation": "ដ៏ល្អប្រពៃ និងជាអ្នកប្រតិបត្ដិតាមអល់ឡោះយ៉ាង ខ្ជាប់ខ្ជួន។",
      "footnotes": ""
    },
    {
      "id": "5775",
      "sura": "80",
      "aya": "17",
      "arabic_text": "قُتِلَ ٱلۡإِنسَٰنُ مَآ أَكۡفَرَهُۥ",
      "translation": "មនុស្សលោកត្រូវបានគេដាក់បណ្ដាសានូវអ្វីដែលគេបាន ប្រឆាំងនឹងម្ចាស់របស់គេ ។",
      "footnotes": ""
    },
    {
      "id": "5776",
      "sura": "80",
      "aya": "18",
      "arabic_text": "مِنۡ أَيِّ شَيۡءٍ خَلَقَهُۥ",
      "translation": "តើទ្រង់បានបង្កើតគេ(អ្នកប្រឆាំង)អំពីអ្វី?",
      "footnotes": ""
    },
    {
      "id": "5777",
      "sura": "80",
      "aya": "19",
      "arabic_text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
      "translation": "ទ្រង់បានបង្កីតគេអំពីទឹកកាម រួចទ្រង់បានកំណត់ឱ្យគេ រួចជាសេ្រច (ថ្ងៃស្លាប់ លាភសក្ការៈ វាសនា...)។",
      "footnotes": ""
    },
    {
      "id": "5778",
      "sura": "80",
      "aya": "20",
      "arabic_text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
      "translation": "បន្ទាប់មក ទ្រង់បានសម្រួលផ្លូវដល់គេ។",
      "footnotes": ""
    },
    {
      "id": "5779",
      "sura": "80",
      "aya": "21",
      "arabic_text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ",
      "translation": "ក្រោយមក ទ្រង់ធ្វើឱ្យគេស្លាប់ រួចដាក់គេនៅក្នុងផ្នូរ។",
      "footnotes": ""
    },
    {
      "id": "5780",
      "sura": "80",
      "aya": "22",
      "arabic_text": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
      "translation": "ក្រោយមកទៀត នៅពេលដែលទ្រង់មានចេតនា ទ្រង់ នឹងធ្វើឱ្យគេរស់ឡើងវិញ។",
      "footnotes": ""
    },
    {
      "id": "5781",
      "sura": "80",
      "aya": "23",
      "arabic_text": "كَلَّا لَمَّا يَقۡضِ مَآ أَمَرَهُۥ",
      "translation": "ទេ. គេមិនអនុវត្ដតាមអ្វីដែលទ្រង់បានបញ្ជាគេឡើយ។",
      "footnotes": ""
    },
    {
      "id": "5782",
      "sura": "80",
      "aya": "24",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ",
      "translation": "ដូចេ្នះ ចូរឱ្យមនុស្សលោកមើលទៅកាន់ចំណីអាហារ របស់គេចុះ។",
      "footnotes": ""
    },
    {
      "id": "5783",
      "sura": "80",
      "aya": "25",
      "arabic_text": "أَنَّا صَبَبۡنَا ٱلۡمَآءَ صَبّٗا",
      "translation": "ពិតប្រាកដណាស់ យើងបានបញ្ចុះទឹកភ្លៀងមកយ៉ាង ច្រើន។",
      "footnotes": ""
    },
    {
      "id": "5784",
      "sura": "80",
      "aya": "26",
      "arabic_text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقّٗا",
      "translation": "បន្ទាប់មកយើងបានបំបែកដីជាបំណែកៗ។",
      "footnotes": ""
    },
    {
      "id": "5785",
      "sura": "80",
      "aya": "27",
      "arabic_text": "فَأَنۢبَتۡنَا فِيهَا حَبّٗا",
      "translation": "រួចយើងបានបណុ្ដះធញ្ញជាតិគ្រប់ប្រភេទនៅលើវា។",
      "footnotes": ""
    },
    {
      "id": "5786",
      "sura": "80",
      "aya": "28",
      "arabic_text": "وَعِنَبٗا وَقَضۡبٗا",
      "translation": "និងដើមទំពាំងបាយជូរ និងបន្លែ។",
      "footnotes": ""
    },
    {
      "id": "5787",
      "sura": "80",
      "aya": "29",
      "arabic_text": "وَزَيۡتُونٗا وَنَخۡلٗا",
      "translation": "និងដើមអូលីវ និងដើមលើ្ម។",
      "footnotes": ""
    },
    {
      "id": "5788",
      "sura": "80",
      "aya": "30",
      "arabic_text": "وَحَدَآئِقَ غُلۡبٗا",
      "translation": "និងសួនឧទ្យានដែលមានដើមឈើធំៗជាច្រើន។",
      "footnotes": ""
    },
    {
      "id": "5789",
      "sura": "80",
      "aya": "31",
      "arabic_text": "وَفَٰكِهَةٗ وَأَبّٗا",
      "translation": "និងផលានុផល ហើយនិងរុក្ខជាតិសម្រាប់សត្វពាហនៈ",
      "footnotes": ""
    },
    {
      "id": "5790",
      "sura": "80",
      "aya": "32",
      "arabic_text": "مَّتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ",
      "translation": "ជាផលប្រយោជន៍សម្រាប់ពួកអ្នកនិងសត្វពាហនៈរបស់ ពួកអ្នក។",
      "footnotes": ""
    },
    {
      "id": "5791",
      "sura": "80",
      "aya": "33",
      "arabic_text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
      "translation": "ហើយនៅពេលដែលសម្រែក(ការផ្លុំត្រែលើកទីពីរ) យ៉ាងខ្លាំងបានមកដល់។",
      "footnotes": ""
    },
    {
      "id": "5792",
      "sura": "80",
      "aya": "34",
      "arabic_text": "يَوۡمَ يَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِيهِ",
      "translation": "នៅថ្ងៃដែលមនុស្សរត់គេចចេញពីបងប្អូនរបស់គេ។",
      "footnotes": ""
    },
    {
      "id": "5793",
      "sura": "80",
      "aya": "35",
      "arabic_text": "وَأُمِّهِۦ وَأَبِيهِ",
      "translation": "និងម្ដាយរបស់គេ និងឪពុករបស់គេ។",
      "footnotes": ""
    },
    {
      "id": "5794",
      "sura": "80",
      "aya": "36",
      "arabic_text": "وَصَٰحِبَتِهِۦ وَبَنِيهِ",
      "translation": "និងប្រពន្ធរបស់គេ និងកូនចៅរបស់គេ។",
      "footnotes": ""
    },
    {
      "id": "5795",
      "sura": "80",
      "aya": "37",
      "arabic_text": "لِكُلِّ ٱمۡرِيٕٖ مِّنۡهُمۡ يَوۡمَئِذٖ شَأۡنٞ يُغۡنِيهِ",
      "translation": "ចំពោះបុគ្គលម្នាក់ៗក្នុងចំណោមពួកគេនៅថ្ងៃនោះ គឺគិតតែពីខ្លួនឯងប៉ុណ្ណោះ។",
      "footnotes": ""
    },
    {
      "id": "5796",
      "sura": "80",
      "aya": "38",
      "arabic_text": "وُجُوهٞ يَوۡمَئِذٖ مُّسۡفِرَةٞ",
      "translation": "ទឹកមុខ(របស់អ្នកមានជំនឿ)នៅថ្ងៃនោះគឺមានភាព រីករាយ។",
      "footnotes": ""
    },
    {
      "id": "5797",
      "sura": "80",
      "aya": "39",
      "arabic_text": "ضَاحِكَةٞ مُّسۡتَبۡشِرَةٞ",
      "translation": "សើចសប្បាយរីករាយ(ចំពោះដំណឹងល្អស្ដីពីឋានសួគ៌)។",
      "footnotes": ""
    },
    {
      "id": "5798",
      "sura": "80",
      "aya": "40",
      "arabic_text": "وَوُجُوهٞ يَوۡمَئِذٍ عَلَيۡهَا غَبَرَةٞ",
      "translation": "ហើយទឹកមុខ(របស់អ្នកគ្មានជំនឿ)នៅថ្ងៃនោះ គឺប្រឡាក់ធូលី។",
      "footnotes": ""
    },
    {
      "id": "5799",
      "sura": "80",
      "aya": "41",
      "arabic_text": "تَرۡهَقُهَا قَتَرَةٌ",
      "translation": "ភាពខ្មៅងងឹតគ្របដណ្ដប់ផ្ទៃមុខ(របស់ពួកគេ)។",
      "footnotes": ""
    },
    {
      "id": "5800",
      "sura": "80",
      "aya": "42",
      "arabic_text": "أُوْلَٰٓئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ",
      "translation": "ពួកទាំងនោះហើយ គឺជាពួកគ្មានជំនឿដែលប្រព្រឹត្ដ អំពើអាក្រក់បំផុត។",
      "footnotes": ""
