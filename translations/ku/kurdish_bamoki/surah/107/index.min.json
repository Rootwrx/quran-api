{
  "verses": [
    {
      "number": "1",
      "arabic_text": "أَرَءَيۡتَ ٱلَّذِي يُكَذِّبُ بِٱلدِّينِ",
      "translation": "ئایا بینیت ئەو کەسەی کە بڕوای بە ئایین نیە ( یان بە ڕۆژی دوایی)؟\n"
    },
    {
      "number": "2",
      "arabic_text": "فَذَٰلِكَ ٱلَّذِي يَدُعُّ ٱلۡيَتِيمَ",
      "translation": "ئەوە کەسێکە کە پاڵ بە ھەتیوەوە دەنێت\n"
    },
    {
      "number": "3",
      "arabic_text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلۡمِسۡكِينِ",
      "translation": "وە ھانی خەڵکی نادات بۆ خواردندان بە ھەژاران\n"
    },
    {
      "number": "4",
      "arabic_text": "فَوَيۡلٞ لِّلۡمُصَلِّينَ",
      "translation": "ئەمجا وای بۆ نوێژکەران\n"
    },
    {
      "number": "5",
      "arabic_text": "ٱلَّذِينَ هُمۡ عَن صَلَاتِهِمۡ سَاهُونَ",
      "translation": "ئەوانەی کە لە نوێژەکەیان بێ ئاگان\n"
    },
    {
      "number": "6",
      "arabic_text": "ٱلَّذِينَ هُمۡ يُرَآءُونَ",
      "translation": "ئەوانەی کە ڕووپامایی دەکەن\n"
    },
    {
      "number": "7",
      "arabic_text": "وَيَمۡنَعُونَ ٱلۡمَاعُونَ",
      "translation": "وە یارمەتی خەڵک نادەن و(ھەموو چاکەیەک دەگرنەوە لە خەڵکی)\n"
    }
  ]
}