{
  "verses": [
    {
      "number": "1",
      "arabic_text": "وَٱلسَّمَآءِ وَٱلطَّارِقِ",
      "translation": "سوێند بە ئاسمان وئەوەی کە لەشەوا دەردەکەوێت\n"
    },
    {
      "number": "2",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلطَّارِقُ",
      "translation": "تۆ چوزانیت دەرکەوتووی شەو چیە ؟\n"
    },
    {
      "number": "3",
      "arabic_text": "ٱلنَّجۡمُ ٱلثَّاقِبُ",
      "translation": "ئەستێرەی درەخشانی تاریکی کون کەرە\n"
    },
    {
      "number": "4",
      "arabic_text": "إِن كُلُّ نَفۡسٖ لَّمَّا عَلَيۡهَا حَافِظٞ",
      "translation": "(سوێند بەمانە) کەس نیە کە چاودێرێکی بەسەرەوە نەبێت\n"
    },
    {
      "number": "5",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ مِمَّ خُلِقَ",
      "translation": " دەی با مرۆڤ سەرنج بدات کە لەچی دروستكراوە\n"
    },
    {
      "number": "6",
      "arabic_text": "خُلِقَ مِن مَّآءٖ دَافِقٖ",
      "translation": "دروستكراوە لە ئاوێکی فڕێدراو (ھەڵقوڵاو)\n"
    },
    {
      "number": "7",
      "arabic_text": "يَخۡرُجُ مِنۢ بَيۡنِ ٱلصُّلۡبِ وَٱلتَّرَآئِبِ",
      "translation": "کە دەردەچێت لە ناوەندی پشتی (پیاو) ودانەی (پەراسووی) سنگی (ژنەوە)\n"
    },
    {
      "number": "8",
      "arabic_text": "إِنَّهُۥ عَلَىٰ رَجۡعِهِۦ لَقَادِرٞ",
      "translation": "بەڕاستی خوا بەدەسەڵاتە لەسەر زیندوو کردنەوەی\n"
    },
    {
      "number": "9",
      "arabic_text": "يَوۡمَ تُبۡلَى ٱلسَّرَآئِرُ",
      "translation": "لە ڕۆژێکدا کە ھەرچی نھێنی ھەیە ئاشکرا دەکرێت\n"
    },
    {
      "number": "10",
      "arabic_text": "فَمَا لَهُۥ مِن قُوَّةٖ وَلَا نَاصِرٖ",
      "translation": " ئەو نە ھێزێک شك دەبات ونە پشتیوانێك\n"
    },
    {
      "number": "11",
      "arabic_text": "وَٱلسَّمَآءِ ذَاتِ ٱلرَّجۡعِ",
      "translation": "سوێند بە ئاسمانی خاوەن باران\n"
    },
    {
      "number": "12",
      "arabic_text": "وَٱلۡأَرۡضِ ذَاتِ ٱلصَّدۡعِ",
      "translation": "وە بەزەوی خاوەن درز وقڵییش\n"
    },
    {
      "number": "13",
      "arabic_text": "إِنَّهُۥ لَقَوۡلٞ فَصۡلٞ",
      "translation": "بێگومان ئەم(قورئانە)م وتەی ڕاست وجیاکەرەوەیە\n"
    },
    {
      "number": "14",
      "arabic_text": "وَمَا هُوَ بِٱلۡهَزۡلِ",
      "translation": "وە گاڵتە نیە\n"
    },
    {
      "number": "15",
      "arabic_text": "إِنَّهُمۡ يَكِيدُونَ كَيۡدٗا",
      "translation": "بێگومان بێ بڕواکان (پیلان دەگێڕن) وفێڵ دەکەن چۆن فێڵ کردنێك\n"
    },
    {
      "number": "16",
      "arabic_text": "وَأَكِيدُ كَيۡدٗا",
      "translation": "وە منیش پیلان دەگێڕم (ونەخشە دەکێشم لەبەرامبەر پیلانی ئەواندا) چۆن پیلان ونەخشە کێشانێك\n"
    },
    {
      "number": "17",
      "arabic_text": "فَمَهِّلِ ٱلۡكَٰفِرِينَ أَمۡهِلۡهُمۡ رُوَيۡدَۢا",
      "translation": "ئەمجا (تۆش ئەی پێغەمبەر ﷺ) مۆڵەتی بێ بڕواکان بدە، منیش کەمێك لێیان دەوەستم (پاشان دەبینیت چیان بەسەر دەھێنم بە سزادانایان)\n"
    }
  ]
}