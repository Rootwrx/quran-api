    {
      "id": "6180",
      "sura": "104",
      "aya": "1",
      "arabic_text": "وَيۡلٞ لِّكُلِّ هُمَزَةٖ لُّمَزَةٍ",
      "translation": "تباهي ده هر پېغور ورکوونکي او پسې شا بد ويونکي لره.",
      "footnotes": ""
    },
    {
      "id": "6181",
      "sura": "104",
      "aya": "2",
      "arabic_text": "ٱلَّذِي جَمَعَ مَالٗا وَعَدَّدَهُۥ",
      "translation": "هغه چې مال يې غونډ کړی او شمېرلی يې (اېښی) دی.",
      "footnotes": ""
    },
    {
      "id": "6182",
      "sura": "104",
      "aya": "3",
      "arabic_text": "يَحۡسَبُ أَنَّ مَالَهُۥٓ أَخۡلَدَهُۥ",
      "translation": "ګومان کوي چې (دا) مال به يې تل ژوندی وساتي.",
      "footnotes": ""
    },
    {
      "id": "6183",
      "sura": "104",
      "aya": "4",
      "arabic_text": "كَلَّاۖ لَيُنۢبَذَنَّ فِي ٱلۡحُطَمَةِ",
      "translation": "هيڅکله نه، هغه به هرومرو په ټوټه ټوټه کوونکي (اور) کې غورځول کيږي.",
      "footnotes": ""
    },
    {
      "id": "6184",
      "sura": "104",
      "aya": "5",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلۡحُطَمَةُ",
      "translation": "او ته څه خبر يې چې ټوټه ټوټه کوونکی څه دی.",
      "footnotes": ""
    },
    {
      "id": "6185",
      "sura": "104",
      "aya": "6",
      "arabic_text": "نَارُ ٱللَّهِ ٱلۡمُوقَدَةُ",
      "translation": "د الله بل کړل شوی اور دی.",
      "footnotes": ""
    },
    {
      "id": "6186",
      "sura": "104",
      "aya": "7",
      "arabic_text": "ٱلَّتِي تَطَّلِعُ عَلَى ٱلۡأَفۡـِٔدَةِ",
      "translation": "همغه چې پر زړونو به ورخېژي.",
      "footnotes": ""
    },
    {
      "id": "6187",
      "sura": "104",
      "aya": "8",
      "arabic_text": "إِنَّهَا عَلَيۡهِم مُّؤۡصَدَةٞ",
      "translation": "بېشکه هغه پر هغوی را ايسار کړل شوی دی.",
      "footnotes": ""
    },
    {
      "id": "6188",
      "sura": "104",
      "aya": "9",
      "arabic_text": "فِي عَمَدٖ مُّمَدَّدَةِۭ",
      "translation": "په اوږدو ستنو کې.",
      "footnotes": ""
    }
  ]
}