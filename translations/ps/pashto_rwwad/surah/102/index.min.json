{
  "verses": [
    {
      "number": "1",
      "arabic_text": "أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ",
      "translation": "تاسو زياتولو بې پروا کړي ياست."
    },
    {
      "number": "2",
      "arabic_text": "حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ",
      "translation": "تردې چې قبرونو ته ورسېږئ."
    },
    {
      "number": "3",
      "arabic_text": "كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "نه داسې نه ده، ژر به تاسي پوه شئ."
    },
    {
      "number": "4",
      "arabic_text": "ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "بيا هيڅکله داسې نه ده، ژر به پوه شئ."
    },
    {
      "number": "5",
      "arabic_text": "كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ",
      "translation": "هيڅکله نه، که تاسي په يقيني پوهه پوهېدلای."
    },
    {
      "number": "6",
      "arabic_text": "لَتَرَوُنَّ ٱلۡجَحِيمَ",
      "translation": "تاسي به هرومرو دوزخ ووينئ."
    },
    {
      "number": "7",
      "arabic_text": "ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ",
      "translation": "بيا به هرومرو د يقين په سترګو هغه ووينئ."
    },
    {
      "number": "8",
      "arabic_text": "ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ",
      "translation": "بيا به هرومرو تاسي په هغه ورځ د (دغو) نعمتونو په اړه وپوښتل شئ."
    }
  ]
}