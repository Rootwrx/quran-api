{
  "verses": [
    {
      "number": "1",
      "arabic_text": "وَٱلۡعَٰدِيَٰتِ ضَبۡحٗا",
      "translation": "پر سختو ځغلېدونکو آسونو قسم."
    },
    {
      "number": "2",
      "arabic_text": "فَٱلۡمُورِيَٰتِ قَدۡحٗا",
      "translation": "بيا پر اور ویستونکو د پښو وهلو سره."
    },
    {
      "number": "3",
      "arabic_text": "فَٱلۡمُغِيرَٰتِ صُبۡحٗا",
      "translation": "بيا په سباوون کې پر يرغل کوونکو قسم."
    },
    {
      "number": "4",
      "arabic_text": "فَأَثَرۡنَ بِهِۦ نَقۡعٗا",
      "translation": "بيا دوړې پرې جګې کړي."
    },
    {
      "number": "5",
      "arabic_text": "فَوَسَطۡنَ بِهِۦ جَمۡعًا",
      "translation": "او د ټولي منځته ځان ننباسي."
    },
    {
      "number": "6",
      "arabic_text": "إِنَّ ٱلۡإِنسَٰنَ لِرَبِّهِۦ لَكَنُودٞ",
      "translation": "بېشکه چې انسان د خپل پالونکي ډېر ناشکره دی."
    },
    {
      "number": "7",
      "arabic_text": "وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٞ",
      "translation": "او هغه په خپله هم پرې هرومرو شاهد دی."
    },
    {
      "number": "8",
      "arabic_text": "وَإِنَّهُۥ لِحُبِّ ٱلۡخَيۡرِ لَشَدِيدٌ",
      "translation": "او بېشکه هغه د مال په مينه کې ډېر تکړه دی."
    },
    {
      "number": "9",
      "arabic_text": "۞ أَفَلَا يَعۡلَمُ إِذَا بُعۡثِرَ مَا فِي ٱلۡقُبُورِ",
      "translation": "آيا هغه نه پوهيږي کله (به) چې هغه څه راپورته کړی شي کوم چې په قبرونو کې دي."
    },
    {
      "number": "10",
      "arabic_text": "وَحُصِّلَ مَا فِي ٱلصُّدُورِ",
      "translation": "او را ښکاره به شي څه چې په سينو کې دي."
    },
    {
      "number": "11",
      "arabic_text": "إِنَّ رَبَّهُم بِهِمۡ يَوۡمَئِذٖ لَّخَبِيرُۢ",
      "translation": "بېشکه په هغه ورځ به يې پالونکی ښه پرې خبر وي."
    }
  ]
}