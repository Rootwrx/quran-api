{
  "verses": [
    {
      "number": "1",
      "arabic_text": "قُلۡ هُوَ ٱللَّهُ أَحَدٌ",
      "translation": "ووايه هغه الله يو دی."
    },
    {
      "number": "2",
      "arabic_text": "ٱللَّهُ ٱلصَّمَدُ",
      "translation": "الله بې پروا دی."
    },
    {
      "number": "3",
      "arabic_text": "لَمۡ يَلِدۡ وَلَمۡ يُولَدۡ",
      "translation": "نه يې څوک زيږولي اونه په خپله زېږېدلی."
    },
    {
      "number": "4",
      "arabic_text": "وَلَمۡ يَكُن لَّهُۥ كُفُوًا أَحَدُۢ",
      "translation": "او نه هيڅوک هغه لره سيال شته."
    }
  ]
}