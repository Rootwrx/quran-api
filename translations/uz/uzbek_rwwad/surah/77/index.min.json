{
  "verses": [
    {
      "number": "1",
      "arabic_text": "وَٱلۡمُرۡسَلَٰتِ عُرۡفٗا",
      "translation": "Пайдар-пай юборилган (шамол)ларга қасам."
    },
    {
      "number": "2",
      "arabic_text": "فَٱلۡعَٰصِفَٰتِ عَصۡفٗا",
      "translation": "Қаттиқ эсган шамолларга қасам."
    },
    {
      "number": "3",
      "arabic_text": "وَٱلنَّٰشِرَٰتِ نَشۡرٗا",
      "translation": "Тарқатиб юборадиган (шамол)ларга қасам."
    },
    {
      "number": "4",
      "arabic_text": "فَٱلۡفَٰرِقَٰتِ فَرۡقٗا",
      "translation": "Фарқлаб берувчи (фаришта)ларга қасам."
    },
    {
      "number": "5",
      "arabic_text": "فَٱلۡمُلۡقِيَٰتِ ذِكۡرًا",
      "translation": "Ваҳийни ташувчиларга қасам."
    },
    {
      "number": "6",
      "arabic_text": "عُذۡرًا أَوۡ نُذۡرًا",
      "translation": "Узрларни ёки огоҳлантиришларни."
    },
    {
      "number": "7",
      "arabic_text": "إِنَّمَا تُوعَدُونَ لَوَٰقِعٞ",
      "translation": "Сизларга ваъда қилинган нарса аниқ содир бўлгувчидир."
    },
    {
      "number": "8",
      "arabic_text": "فَإِذَا ٱلنُّجُومُ طُمِسَتۡ",
      "translation": "Бас, юлдузлар ўчирилганда."
    },
    {
      "number": "9",
      "arabic_text": "وَإِذَا ٱلسَّمَآءُ فُرِجَتۡ",
      "translation": "Ва осмон ёрилганда."
    },
    {
      "number": "10",
      "arabic_text": "وَإِذَا ٱلۡجِبَالُ نُسِفَتۡ",
      "translation": "Тоғлар сочилганда."
    },
    {
      "number": "11",
      "arabic_text": "وَإِذَا ٱلرُّسُلُ أُقِّتَتۡ",
      "translation": "Пайғамбарларга вақт белгиланганда."
    },
    {
      "number": "12",
      "arabic_text": "لِأَيِّ يَوۡمٍ أُجِّلَتۡ",
      "translation": "Қай кунга белгиланган эди?"
    },
    {
      "number": "13",
      "arabic_text": "لِيَوۡمِ ٱلۡفَصۡلِ",
      "translation": "Ажратиш кунига."
    },
    {
      "number": "14",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا يَوۡمُ ٱلۡفَصۡلِ",
      "translation": "Ажратиш куни нима эканини қаердан ҳам билар эдингиз?"
    },
    {
      "number": "15",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "16",
      "arabic_text": "أَلَمۡ نُهۡلِكِ ٱلۡأَوَّلِينَ",
      "translation": "Олдингиларни ҳалок қилмадикми?"
    },
    {
      "number": "17",
      "arabic_text": "ثُمَّ نُتۡبِعُهُمُ ٱلۡأٓخِرِينَ",
      "translation": "Сўнгра кейингиларни ҳам уларга эргаштирурмиз."
    },
    {
      "number": "18",
      "arabic_text": "كَذَٰلِكَ نَفۡعَلُ بِٱلۡمُجۡرِمِينَ",
      "translation": "Жиноятчиларни шундоқ қилурмиз."
    },
    {
      "number": "19",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "20",
      "arabic_text": "أَلَمۡ نَخۡلُقكُّم مِّن مَّآءٖ مَّهِينٖ",
      "translation": "Сизларни бир ҳақир сувдан яратмадикми?"
    },
    {
      "number": "21",
      "arabic_text": "فَجَعَلۡنَٰهُ فِي قَرَارٖ مَّكِينٍ",
      "translation": "Бас, уни мустаҳкам қароргоҳга жойламадикми?!"
    },
    {
      "number": "22",
      "arabic_text": "إِلَىٰ قَدَرٖ مَّعۡلُومٖ",
      "translation": "Маълум муддатгача."
    },
    {
      "number": "23",
      "arabic_text": "فَقَدَرۡنَا فَنِعۡمَ ٱلۡقَٰدِرُونَ",
      "translation": "Бас, қодир бўлдик. Нақадар қудратлимиз!"
    },
    {
      "number": "24",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "25",
      "arabic_text": "أَلَمۡ نَجۡعَلِ ٱلۡأَرۡضَ كِفَاتًا",
      "translation": "Ерни ўзига тортувчи қилиб қўймадикми?!"
    },
    {
      "number": "26",
      "arabic_text": "أَحۡيَآءٗ وَأَمۡوَٰتٗا",
      "translation": "Тирикларни ҳам, ўликларни ҳам."
    },
    {
      "number": "27",
      "arabic_text": "وَجَعَلۡنَا فِيهَا رَوَٰسِيَ شَٰمِخَٰتٖ وَأَسۡقَيۡنَٰكُم مَّآءٗ فُرَاتٗا",
      "translation": "Унда юксак тоғлар қилдик ва сизларни чучук сув билан суғордик."
    },
    {
      "number": "28",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "29",
      "arabic_text": "ٱنطَلِقُوٓاْ إِلَىٰ مَا كُنتُم بِهِۦ تُكَذِّبُونَ",
      "translation": "Энди ўша ўзингиз ёлғонга чиқарган нарса сари юраверинглар."
    },
    {
      "number": "30",
      "arabic_text": "ٱنطَلِقُوٓاْ إِلَىٰ ظِلّٖ ذِي ثَلَٰثِ شُعَبٖ",
      "translation": "Уч бўлакли «соя» сари бораверинглар!"
    },
    {
      "number": "31",
      "arabic_text": "لَّا ظَلِيلٖ وَلَا يُغۡنِي مِنَ ٱللَّهَبِ",
      "translation": "У ҳеч қандай салқин ҳам қилмайди, оловни ҳам қайтармайди."
    },
    {
      "number": "32",
      "arabic_text": "إِنَّهَا تَرۡمِي بِشَرَرٖ كَٱلۡقَصۡرِ",
      "translation": "Албатта, у қасрдек учқунларни отиб туради."
    },
    {
      "number": "33",
      "arabic_text": "كَأَنَّهُۥ جِمَٰلَتٞ صُفۡرٞ",
      "translation": "Гўё улар қорамтир сариқ туялардек."
    },
    {
      "number": "34",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "35",
      "arabic_text": "هَٰذَا يَوۡمُ لَا يَنطِقُونَ",
      "translation": "Бу улар гапира олмайдиган кундир."
    },
    {
      "number": "36",
      "arabic_text": "وَلَا يُؤۡذَنُ لَهُمۡ فَيَعۡتَذِرُونَ",
      "translation": "Ва уларга узр айтишга изн берилмайди."
    },
    {
      "number": "37",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "38",
      "arabic_text": "هَٰذَا يَوۡمُ ٱلۡفَصۡلِۖ جَمَعۡنَٰكُمۡ وَٱلۡأَوَّلِينَ",
      "translation": "Бу ажратиш кунидир. Сизларни ҳам, олдингиларни ҳам жамладик."
    },
    {
      "number": "39",
      "arabic_text": "فَإِن كَانَ لَكُمۡ كَيۡدٞ فَكِيدُونِ",
      "translation": "Бас, сизларнинг бирон ҳийлангиз бўлса, Менга ишлатиб кўринглар-чи?"
    },
    {
      "number": "40",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "41",
      "arabic_text": "إِنَّ ٱلۡمُتَّقِينَ فِي ظِلَٰلٖ وَعُيُونٖ",
      "translation": "Дарҳақиқат, тақводорлар соялар ва чашмаларда бўладилар."
    },
    {
      "number": "42",
      "arabic_text": "وَفَوَٰكِهَ مِمَّا يَشۡتَهُونَ",
      "translation": "Ва кўнгиллари тусаган мевалардадирлар."
    },
    {
      "number": "43",
      "arabic_text": "كُلُواْ وَٱشۡرَبُواْ هَنِيٓـَٔۢا بِمَا كُنتُمۡ تَعۡمَلُونَ",
      "translation": "Қилиб ўтган яхши амалларингиз учун енглар, ичинглар. Ош бўлсин."
    },
    {
      "number": "44",
      "arabic_text": "إِنَّا كَذَٰلِكَ نَجۡزِي ٱلۡمُحۡسِنِينَ",
      "translation": "Албатта, Биз гўзал амал қилгувчиларни мана шундай мукофотлаймиз."
    },
    {
      "number": "45",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "46",
      "arabic_text": "كُلُواْ وَتَمَتَّعُواْ قَلِيلًا إِنَّكُم مُّجۡرِمُونَ",
      "translation": "Бирозгина еб, фойдаланиб қолинглар! Сизлар аниқ жиноятчисизлар!"
    },
    {
      "number": "47",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "48",
      "arabic_text": "وَإِذَا قِيلَ لَهُمُ ٱرۡكَعُواْ لَا يَرۡكَعُونَ",
      "translation": "Уларга: «Рукуъ қилинглар», дейилса, рукуъ қилмаслар."
    },
    {
      "number": "49",
      "arabic_text": "وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ",
      "translation": "У кунда ёлғон дегувчиларга ҳалокат бўлгай!"
    },
    {
      "number": "50",
      "arabic_text": "فَبِأَيِّ حَدِيثِۭ بَعۡدَهُۥ يُؤۡمِنُونَ",
      "translation": "Бас, ундан кейин қайси сўзга ишонадилар?!"
    }
  ]
}