{
  "verses": [
    {
      "number": "1",
      "arabic_text": "قُلۡ هُوَ ٱللَّهُ أَحَدٌ",
      "translation": "1. Loba: Allah azali sé moko."
    },
    {
      "number": "2",
      "arabic_text": "ٱللَّهُ ٱلصَّمَدُ",
      "translation": "2. Allah akoka."
    },
    {
      "number": "3",
      "arabic_text": "لَمۡ يَلِدۡ وَلَمۡ يُولَدۡ",
      "translation": "3. Abota te mpe abotama te."
    },
    {
      "number": "4",
      "arabic_text": "وَلَمۡ يَكُن لَّهُۥ كُفُوًا أَحَدُۢ",
      "translation": "4. Mpe akokani na eloko moko te."
    }
  ]
}