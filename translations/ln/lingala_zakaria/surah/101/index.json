  "result": [
    {
      "id": "6158",
      "sura": "101",
      "aya": "1",
      "arabic_text": "ٱلۡقَارِعَةُ",
      "translation": "1. Bobangi.",
      "footnotes": ""
    },
    {
      "id": "6159",
      "sura": "101",
      "aya": "2",
      "arabic_text": "مَا ٱلۡقَارِعَةُ",
      "translation": "2. Eloko nini yango bobangi?",
      "footnotes": ""
    },
    {
      "id": "6160",
      "sura": "101",
      "aya": "3",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلۡقَارِعَةُ",
      "translation": "3. Nani akoyebisa yo eloko nini bobangi?",
      "footnotes": ""
    },
    {
      "id": "6161",
      "sura": "101",
      "aya": "4",
      "arabic_text": "يَوۡمَ يَكُونُ ٱلنَّاسُ كَٱلۡفَرَاشِ ٱلۡمَبۡثُوثِ",
      "translation": "4. Mokolo moye bato bakozala lokola bapomboli ya kopanzana.",
      "footnotes": ""
    },
    {
      "id": "6162",
      "sura": "101",
      "aya": "5",
      "arabic_text": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ ٱلۡمَنفُوشِ",
      "translation": "5. Mpe bangomba bikozalaka lokola bilamba bilemba.",
      "footnotes": ""
    },
    {
      "id": "6163",
      "sura": "101",
      "aya": "6",
      "arabic_text": "فَأَمَّا مَن ثَقُلَتۡ مَوَٰزِينُهُۥ",
      "translation": "6. Mpona moto oyo emekelo naye ekozala nkilo,",
      "footnotes": ""
    },
    {
      "id": "6164",
      "sura": "101",
      "aya": "7",
      "arabic_text": "فَهُوَ فِي عِيشَةٖ رَّاضِيَةٖ",
      "translation": "7. Akozala na bomoyi ya esengo.",
      "footnotes": ""
    },
    {
      "id": "6165",
      "sura": "101",
      "aya": "8",
      "arabic_text": "وَأَمَّا مَنۡ خَفَّتۡ مَوَٰزِينُهُۥ",
      "translation": "8. Kasi mpona moto oyo emekelo naye ekozanga kilo,",
      "footnotes": ""
    },
    {
      "id": "6166",
      "sura": "101",
      "aya": "9",
      "arabic_text": "فَأُمُّهُۥ هَاوِيَةٞ",
      "translation": "9. Bozongi mpe bofandi naye ekozala libulu ya mozindo makasi.",
      "footnotes": ""
    },
    {
      "id": "6167",
      "sura": "101",
      "aya": "10",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا هِيَهۡ",
      "translation": "10. Mpe nani akoyebisa yo ntina na yango?",
      "footnotes": ""
    },
    {
      "id": "6168",
      "sura": "101",
      "aya": "11",
      "arabic_text": "نَارٌ حَامِيَةُۢ",
      "translation": "11. Ezali nde moto ya makasi.",
      "footnotes": ""
    }
  ]
}