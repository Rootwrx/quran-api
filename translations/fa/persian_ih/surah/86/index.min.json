{
  "verses": [
    {
      "number": "1",
      "arabic_text": "وَٱلسَّمَآءِ وَٱلطَّارِقِ",
      "translation": "سوگند به آسمان و سوگند به ستارۀ شبگرد."
    },
    {
      "number": "2",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلطَّارِقُ",
      "translation": "و تو چه می‌دانی که ستارۀ شبگرد چیست؟"
    },
    {
      "number": "3",
      "arabic_text": "ٱلنَّجۡمُ ٱلثَّاقِبُ",
      "translation": "[همان] ستارۀ فروزان است."
    },
    {
      "number": "4",
      "arabic_text": "إِن كُلُّ نَفۡسٖ لَّمَّا عَلَيۡهَا حَافِظٞ",
      "translation": "هیچ کس نیست، مگر اینکه نگهبانی [از فرشتگان] بر او[گماشته شده] است."
    },
    {
      "number": "5",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ مِمَّ خُلِقَ",
      "translation": "انسان باید بنگرد که از چه چیز آفریده شده است:"
    },
    {
      "number": "6",
      "arabic_text": "خُلِقَ مِن مَّآءٖ دَافِقٖ",
      "translation": "از یک آب جهنده آفریده شده"
    },
    {
      "number": "7",
      "arabic_text": "يَخۡرُجُ مِنۢ بَيۡنِ ٱلصُّلۡبِ وَٱلتَّرَآئِبِ",
      "translation": "که از میان [استخوانِ] پشت [مرد] و سینۀ [زن] بیرون می‌آید."
    },
    {
      "number": "8",
      "arabic_text": "إِنَّهُۥ عَلَىٰ رَجۡعِهِۦ لَقَادِرٞ",
      "translation": "بی‌گمان، الله بر بازگرداندن او [پس از مرگ] تواناست."
    },
    {
      "number": "9",
      "arabic_text": "يَوۡمَ تُبۡلَى ٱلسَّرَآئِرُ",
      "translation": "روزی ‌که [تمام] رازها فاش شود،"
    },
    {
      "number": "10",
      "arabic_text": "فَمَا لَهُۥ مِن قُوَّةٖ وَلَا نَاصِرٖ",
      "translation": "[در آن روز،] انسان هیچ توان و یاوری ندارد."
    },
    {
      "number": "11",
      "arabic_text": "وَٱلسَّمَآءِ ذَاتِ ٱلرَّجۡعِ",
      "translation": "سوگند به آسمان پرباران"
    },
    {
      "number": "12",
      "arabic_text": "وَٱلۡأَرۡضِ ذَاتِ ٱلصَّدۡعِ",
      "translation": "و سوگند به زمینِ پرشکاف [که گیاهان از آن سر برمی‌آورند]."
    },
    {
      "number": "13",
      "arabic_text": "إِنَّهُۥ لَقَوۡلٞ فَصۡلٞ",
      "translation": "[که] بی‌گمان، این قرآن، سخن جداکنندۀ حق از باطل است"
    },
    {
      "number": "14",
      "arabic_text": "وَمَا هُوَ بِٱلۡهَزۡلِ",
      "translation": "و [سخنِ] هزل و بیهوده نیست."
    },
    {
      "number": "15",
      "arabic_text": "إِنَّهُمۡ يَكِيدُونَ كَيۡدٗا",
      "translation": "آنان [= کافران] پیوسته حیله و نیرنگ می‌کنند"
    },
    {
      "number": "16",
      "arabic_text": "وَأَكِيدُ كَيۡدٗا",
      "translation": "و من [نیز] حیله [و تدبیر] می‌کنم؛"
    },
    {
      "number": "17",
      "arabic_text": "فَمَهِّلِ ٱلۡكَٰفِرِينَ أَمۡهِلۡهُمۡ رُوَيۡدَۢا",
      "translation": "پس به کافران مهلت بده [و] اندکی رهایشان کن [تا غرق گناه باشند]."
    }
  ]
}