{
  "verses": [
    {
      "number": "1",
      "arabic_text": "عَبَسَ وَتَوَلَّىٰٓ",
      "translation": "[پیامبر] چهره در هم کشید و روی برگردانْد"
    },
    {
      "number": "2",
      "arabic_text": "أَن جَآءَهُ ٱلۡأَعۡمَىٰ",
      "translation": "از اینکه آن نابینا [= عبدالله بن اُمّ مَکتوم] نزدش آمد."
    },
    {
      "number": "3",
      "arabic_text": "وَمَا يُدۡرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
      "translation": "و [ای پیامبر،] تو چه می‌دانی؟ چه بسا او [از گناهانش] پاک ‌شود،"
    },
    {
      "number": "4",
      "arabic_text": "أَوۡ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكۡرَىٰٓ",
      "translation": "یا پند گیرد و این پند به سودش باشد."
    },
    {
      "number": "5",
      "arabic_text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ",
      "translation": "اما آن کس که [از ایمان] بی‌نیازی می‌ورزد"
    },
    {
      "number": "6",
      "arabic_text": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
      "translation": "تو به او روی می‌آوری؛"
    },
    {
      "number": "7",
      "arabic_text": "وَمَا عَلَيۡكَ أَلَّا يَزَّكَّىٰ",
      "translation": "در حالی که اگر او خود را [از کفر] پاک نسازد، ایرادی بر تو نیست؛"
    },
    {
      "number": "8",
      "arabic_text": "وَأَمَّا مَن جَآءَكَ يَسۡعَىٰ",
      "translation": "اما کسی که شتابان به سراغ تو می‌آید"
    },
    {
      "number": "9",
      "arabic_text": "وَهُوَ يَخۡشَىٰ",
      "translation": "و [از الله] می‌ترسد،"
    },
    {
      "number": "10",
      "arabic_text": "فَأَنتَ عَنۡهُ تَلَهَّىٰ",
      "translation": "تو از او غافل می‌شوی [و به دیگران می‌پردازی]."
    },
    {
      "number": "11",
      "arabic_text": "كَلَّآ إِنَّهَا تَذۡكِرَةٞ",
      "translation": "هرگز چنین نیست؛ بی‌گمان، این [آیات برای] تذکر و یادآوری است."
    },
    {
      "number": "12",
      "arabic_text": "فَمَن شَآءَ ذَكَرَهُۥ",
      "translation": "پس هر کس که بخواهد، [می‌تواند] از آن پند گیرد."
    },
    {
      "number": "13",
      "arabic_text": "فِي صُحُفٖ مُّكَرَّمَةٖ",
      "translation": "در صحیفه‌های ارجمندی [ثبت] است."
    },
    {
      "number": "14",
      "arabic_text": "مَّرۡفُوعَةٖ مُّطَهَّرَةِۭ",
      "translation": "[در جایگاهی] بلندپایه و پاکیزه [از پلیدی]"
    },
    {
      "number": "15",
      "arabic_text": "بِأَيۡدِي سَفَرَةٖ",
      "translation": "در دست سفیران [وحی] است"
    },
    {
      "number": "16",
      "arabic_text": "كِرَامِۭ بَرَرَةٖ",
      "translation": "[که] بزرگوار و نیکوکارند."
    },
    {
      "number": "17",
      "arabic_text": "قُتِلَ ٱلۡإِنسَٰنُ مَآ أَكۡفَرَهُۥ",
      "translation": "مرگ بر انسان [کافر، که] چقدر ناسپاس است!"
    },
    {
      "number": "18",
      "arabic_text": "مِنۡ أَيِّ شَيۡءٍ خَلَقَهُۥ",
      "translation": "[الله] او را از چه چیز آفریده است؟"
    },
    {
      "number": "19",
      "arabic_text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
      "translation": "او را از نطفۀ [ناچیزی] آفرید، سپس او را موزون ساخت."
    },
    {
      "number": "20",
      "arabic_text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
      "translation": "سپس راه را برایش آسان نمود."
    },
    {
      "number": "21",
      "arabic_text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ",
      "translation": "آنگاه [پس از پایان عمر،] او را میرانْد و در قبر [پنهان] نمود."
    },
    {
      "number": "22",
      "arabic_text": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
      "translation": "سپس هر گاه بخواهد، او را [زنده می‌کند و] برمی‌انگیزد."
    },
    {
      "number": "23",
      "arabic_text": "كَلَّا لَمَّا يَقۡضِ مَآ أَمَرَهُۥ",
      "translation": "هرگز چنین نیست [که او می‌پندارد]. او هنوز آنچه را که [الله] فرمان داده به جای نیاورده است."
    },
    {
      "number": "24",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ",
      "translation": "انسان باید به غذای خویش [و آفرینشِ آن] بنگرد:"
    },
    {
      "number": "25",
      "arabic_text": "أَنَّا صَبَبۡنَا ٱلۡمَآءَ صَبّٗا",
      "translation": "ما آب فراوان [از آسمان] فروریختیم،"
    },
    {
      "number": "26",
      "arabic_text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقّٗا",
      "translation": "سپس زمین را از هم شکافتیم،"
    },
    {
      "number": "27",
      "arabic_text": "فَأَنۢبَتۡنَا فِيهَا حَبّٗا",
      "translation": "آنگاه دانه‌[های فراون] در آن رویاندیم،"
    },
    {
      "number": "28",
      "arabic_text": "وَعِنَبٗا وَقَضۡبٗا",
      "translation": "و انگور و سبزی [خوراکی بسیار]،"
    },
    {
      "number": "29",
      "arabic_text": "وَزَيۡتُونٗا وَنَخۡلٗا",
      "translation": "و زیتون و نخل،"
    },
    {
      "number": "30",
      "arabic_text": "وَحَدَآئِقَ غُلۡبٗا",
      "translation": "و باغ‌هایی [انبوه و] پردرخت،"
    },
    {
      "number": "31",
      "arabic_text": "وَفَٰكِهَةٗ وَأَبّٗا",
      "translation": "و [انواع] میوه و علوفه [پدید آوردیم]."
    },
    {
      "number": "32",
      "arabic_text": "مَّتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ",
      "translation": "[همۀ اینها] برای بهره‌گیری شما و چهارپایانتان است."
    },
    {
      "number": "33",
      "arabic_text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
      "translation": "هنگامی ‌که [آن] صدای مهیب [قیامت] فرارسد،"
    },
    {
      "number": "34",
      "arabic_text": "يَوۡمَ يَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِيهِ",
      "translation": "روزی ‌که انسان از برادرش می‌گریزد"
    },
    {
      "number": "35",
      "arabic_text": "وَأُمِّهِۦ وَأَبِيهِ",
      "translation": "و از مادرش و از پدرش"
    },
    {
      "number": "36",
      "arabic_text": "وَصَٰحِبَتِهِۦ وَبَنِيهِ",
      "translation": "و از زنش و پسرانش [نیز می‌گریزد]،"
    },
    {
      "number": "37",
      "arabic_text": "لِكُلِّ ٱمۡرِيٕٖ مِّنۡهُمۡ يَوۡمَئِذٖ شَأۡنٞ يُغۡنِيهِ",
      "translation": "در آن روز، هر کس را کاری است که او را به خودش سرگرم می‌دارد [و از دیگری بازمی‌دارد]."
    },
    {
      "number": "38",
      "arabic_text": "وُجُوهٞ يَوۡمَئِذٖ مُّسۡفِرَةٞ",
      "translation": "چهره‌هایی در آن روز، گشاده و روشن است."
    },
    {
      "number": "39",
      "arabic_text": "ضَاحِكَةٞ مُّسۡتَبۡشِرَةٞ",
      "translation": "[به خاطر نعمت و رحمتِ الله] خندان [و] شاد است."
    },
    {
      "number": "40",
      "arabic_text": "وَوُجُوهٞ يَوۡمَئِذٍ عَلَيۡهَا غَبَرَةٞ",
      "translation": "و چهره‌هایی در آن روز، غبارآلود است."
    },
    {
      "number": "41",
      "arabic_text": "تَرۡهَقُهَا قَتَرَةٌ",
      "translation": "[و] سیاهی [و تاریکی] آنها را پوشانده است."
    },
    {
      "number": "42",
      "arabic_text": "أُوْلَٰٓئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ",
      "translation": "اینان همان کافرانِ بدکردارند."
    }
  ]
}