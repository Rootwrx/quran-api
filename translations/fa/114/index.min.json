{
  "verses": [
    {
      "number": "1",
      "arabic_text": "قُلۡ أَعُوذُ بِرَبِّ ٱلنَّاسِ",
      "translation": "[ای پیامبر،] بگو: «به پروردگار مردم پناه می‌برم،"
    },
    {
      "number": "2",
      "arabic_text": "مَلِكِ ٱلنَّاسِ",
      "translation": "فرمانروای مردم،"
    },
    {
      "number": "3",
      "arabic_text": "إِلَٰهِ ٱلنَّاسِ",
      "translation": "معبود مردم،"
    },
    {
      "number": "4",
      "arabic_text": "مِن شَرِّ ٱلۡوَسۡوَاسِ ٱلۡخَنَّاسِ",
      "translation": "از شرِ [شیطانِ] وسوسه‌گر که [به هنگام ذکر الله،] پنهان می‌گردد؛"
    },
    {
      "number": "5",
      "arabic_text": "ٱلَّذِي يُوَسۡوِسُ فِي صُدُورِ ٱلنَّاسِ",
      "translation": "همان [وسوسه‌گری] که در دل‌های مردم وسوسه می‌کند؛"
    },
    {
      "number": "6",
      "arabic_text": "مِنَ ٱلۡجِنَّةِ وَٱلنَّاسِ",
      "translation": "از جنیان [باشد] و [یا از] آدمیان»."
    }
  ]
}