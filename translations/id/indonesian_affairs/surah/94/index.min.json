{
  "verses": [
    {
      "number": "1",
      "arabic_text": "أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ",
      "translation": "Bukankah kami telah melapangkan dadamu (Muhammad)?"
    },
    {
      "number": "2",
      "arabic_text": "وَوَضَعۡنَا عَنكَ وِزۡرَكَ",
      "translation": "Dan kami pun telah menurunkan beban darimu,913)"
    },
    {
      "number": "3",
      "arabic_text": "ٱلَّذِيٓ أَنقَضَ ظَهۡرَكَ",
      "translation": "yang memberatkan punggungmu,"
    },
    {
      "number": "4",
      "arabic_text": "وَرَفَعۡنَا لَكَ ذِكۡرَكَ",
      "translation": "dan kami tinggikan sebutan (nama)mu914) bagimu."
    },
    {
      "number": "5",
      "arabic_text": "فَإِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًا",
      "translation": "Maka sesungguhnya bersama kesulitan ada kemudahan,"
    },
    {
      "number": "6",
      "arabic_text": "إِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرٗا",
      "translation": "sesungguhnya bersama kesulitan ada kemudahan."
    },
    {
      "number": "7",
      "arabic_text": "فَإِذَا فَرَغۡتَ فَٱنصَبۡ",
      "translation": "Maka apabila engkau telah selesai (dari suatu urusan), tetaplah bekerja keras (untuk urusan yang lain),915)"
    },
    {
      "number": "8",
      "arabic_text": "وَإِلَىٰ رَبِّكَ فَٱرۡغَب",
      "translation": "dan hanya kepada Tuhanmulah engkau berharap."
    }
  ]
}