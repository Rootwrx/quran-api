{
  "verses": [
    {
      "number": "1",
      "arabic_text": "عَبَسَ وَتَوَلَّىٰٓ",
      "translation": "उस (नबी) ने त्योरी चढ़ाई और मुँह फेर लिया।"
    },
    {
      "number": "2",
      "arabic_text": "أَن جَآءَهُ ٱلۡأَعۡمَىٰ",
      "translation": "इस कारण कि उनके पास अंधा आया।"
    },
    {
      "number": "3",
      "arabic_text": "وَمَا يُدۡرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
      "translation": "और आपको क्या मालूम शायद वह पवित्रता प्राप्त कर ले।"
    },
    {
      "number": "4",
      "arabic_text": "أَوۡ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكۡرَىٰٓ",
      "translation": "या नसीहत ग्रहण करे, तो वह नसीहत उसे लाभ दे।"
    },
    {
      "number": "5",
      "arabic_text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ",
      "translation": "लेकिन जो बेपरवाह हो गया।"
    },
    {
      "number": "6",
      "arabic_text": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
      "translation": "तो आप उसके पीछे पड़ रहे हैं।"
    },
    {
      "number": "7",
      "arabic_text": "وَمَا عَلَيۡكَ أَلَّا يَزَّكَّىٰ",
      "translation": "हालाँकि आपपर कोई दोष नहीं कि वह पवित्रता ग्रहण नहीं करता।"
    },
    {
      "number": "8",
      "arabic_text": "وَأَمَّا مَن جَآءَكَ يَسۡعَىٰ",
      "translation": "लेकिन जो व्यक्ति आपके पास दौड़ता हुआ आया।"
    },
    {
      "number": "9",
      "arabic_text": "وَهُوَ يَخۡشَىٰ",
      "translation": "और वह डर (भी) रहा है।"
    },
    {
      "number": "10",
      "arabic_text": "فَأَنتَ عَنۡهُ تَلَهَّىٰ",
      "translation": "तो आप उसकी ओर ध्यान नहीं देते।[1]"
    },
    {
      "number": "11",
      "arabic_text": "كَلَّآ إِنَّهَا تَذۡكِرَةٞ",
      "translation": "ऐसा हरगिज़ नहीं चाहिए, यह (क़ुरआन) तो एक उपदेश है।"
    },
    {
      "number": "12",
      "arabic_text": "فَمَن شَآءَ ذَكَرَهُۥ",
      "translation": "अतः जो चाहे, उसे याद करे।"
    },
    {
      "number": "13",
      "arabic_text": "فِي صُحُفٖ مُّكَرَّمَةٖ",
      "translation": "(यह क़ुरआन) सम्मानित सहीफ़ों (ग्रंथों) में है।"
    },
    {
      "number": "14",
      "arabic_text": "مَّرۡفُوعَةٖ مُّطَهَّرَةِۭ",
      "translation": "जो उच्च स्थान वाले तथा पवित्र हैं।"
    },
    {
      "number": "15",
      "arabic_text": "بِأَيۡدِي سَفَرَةٖ",
      "translation": "ऐसे लिखने वालों (फ़रिश्तों) के हाथों में हैं।"
    },
    {
      "number": "16",
      "arabic_text": "كِرَامِۭ بَرَرَةٖ",
      "translation": "जो माननीय और नेक हैं।[2]"
    },
    {
      "number": "17",
      "arabic_text": "قُتِلَ ٱلۡإِنسَٰنُ مَآ أَكۡفَرَهُۥ",
      "translation": "सर्वनाश हो मनुष्य का, वह कितना कृतघ्न (नाशुक्रा) है।"
    },
    {
      "number": "18",
      "arabic_text": "مِنۡ أَيِّ شَيۡءٍ خَلَقَهُۥ",
      "translation": "(अल्लाह ने) उसे किस चीज़ से पैदा किया?"
    },
    {
      "number": "19",
      "arabic_text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
      "translation": "एक नुत्फ़े (वीर्य) से उसे पैदा किया, फिर विभिन्न चरणों में उसकी रचना की।"
    },
    {
      "number": "20",
      "arabic_text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
      "translation": "फिर उसके लिए रास्ता आसान कर दिया।"
    },
    {
      "number": "21",
      "arabic_text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ",
      "translation": "फिर उसे मृत्यु दी, फिर उसे क़ब्र में रखवाया।"
    },
    {
      "number": "22",
      "arabic_text": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
      "translation": "फिर जब वह चाहेगा, उसे उठाएगा।"
    },
    {
      "number": "23",
      "arabic_text": "كَلَّا لَمَّا يَقۡضِ مَآ أَمَرَهُۥ",
      "translation": "हरगिज़ नहीं, अभी तक उसने उसे पूरा नहीं किया, जिसका अल्लाह ने उसे आदेश दिया था।[3]"
    },
    {
      "number": "24",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ",
      "translation": "अतः इनसान को चाहिए कि अपने भोजन को देखे।"
    },
    {
      "number": "25",
      "arabic_text": "أَنَّا صَبَبۡنَا ٱلۡمَآءَ صَبّٗا",
      "translation": "कि हमने ख़ूब पानी बरसाया।"
    },
    {
      "number": "26",
      "arabic_text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقّٗا",
      "translation": "फिर हमने धरती को विशेष रूप से फाड़ा।"
    },
    {
      "number": "27",
      "arabic_text": "فَأَنۢبَتۡنَا فِيهَا حَبّٗا",
      "translation": "फिर हमने उसमें अनाज उगाया।"
    },
    {
      "number": "28",
      "arabic_text": "وَعِنَبٗا وَقَضۡبٗا",
      "translation": "तथा अंगूर और (मवेशियों का) चारा।"
    },
    {
      "number": "29",
      "arabic_text": "وَزَيۡتُونٗا وَنَخۡلٗا",
      "translation": "तथा ज़ैतून और खजूर के पेड़।"
    },
    {
      "number": "30",
      "arabic_text": "وَحَدَآئِقَ غُلۡبٗا",
      "translation": "तथा घने बाग़।"
    },
    {
      "number": "31",
      "arabic_text": "وَفَٰكِهَةٗ وَأَبّٗا",
      "translation": "तथा फल और चारा।"
    },
    {
      "number": "32",
      "arabic_text": "مَّتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ",
      "translation": "तुम्हारे लिए तथा तुम्हारे पशुओं के लिए जीवन-सामग्री के रूप में।[4]"
    },
    {
      "number": "33",
      "arabic_text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
      "translation": "तो जब कानों को बहरा कर देने वाली प्रचंड आवाज़ (क़ियामत) आ जाएगी।"
    },
    {
      "number": "34",
      "arabic_text": "يَوۡمَ يَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِيهِ",
      "translation": "जिस दिन इनसान अपने भाई से भागेगा।"
    },
    {
      "number": "35",
      "arabic_text": "وَأُمِّهِۦ وَأَبِيهِ",
      "translation": "तथा अपनी माता और अपने पिता (से)।"
    },
    {
      "number": "36",
      "arabic_text": "وَصَٰحِبَتِهِۦ وَبَنِيهِ",
      "translation": "तथा अपनी पत्नी और अपने बेटों से।"
    },
    {
      "number": "37",
      "arabic_text": "لِكُلِّ ٱمۡرِيٕٖ مِّنۡهُمۡ يَوۡمَئِذٖ شَأۡنٞ يُغۡنِيهِ",
      "translation": "उस दिन उनमें से प्रत्येक व्यक्ति की ऐसी स्थिति होगी, जो उसे (दूसरों से) बेपरवाह कर देगी।"
    },
    {
      "number": "38",
      "arabic_text": "وُجُوهٞ يَوۡمَئِذٖ مُّسۡفِرَةٞ",
      "translation": "उस दिन कुछ चेहरे रौशन होंगे।"
    },
    {
      "number": "39",
      "arabic_text": "ضَاحِكَةٞ مُّسۡتَبۡشِرَةٞ",
      "translation": "हँसते हुए, प्रसन्न होंगे।"
    },
    {
      "number": "40",
      "arabic_text": "وَوُجُوهٞ يَوۡمَئِذٍ عَلَيۡهَا غَبَرَةٞ",
      "translation": "तथा कुछ चेहरों उस दिन धूल से ग्रस्त होंगे।"
    },
    {
      "number": "41",
      "arabic_text": "تَرۡهَقُهَا قَتَرَةٌ",
      "translation": "उनपर कालिमा छाई होगी।"
    },
    {
      "number": "42",
      "arabic_text": "أُوْلَٰٓئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ",
      "translation": "वही काफ़िर और कुकर्मी लोग हैं।[5]"
    }
  ]
}