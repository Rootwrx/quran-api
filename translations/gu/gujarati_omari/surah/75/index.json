{
  "verses": [
    {
      "id": 1,
      "verse_number": 1,
      "page_number": 577,
      "verse_key": "75:1",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "لَآ أُقۡسِمُ بِيَوۡمِ ٱلۡقِيَٰمَةِ",
      "translation": "૧. હું કયામતના દિવસની કસમ ખાઉં છું",
      "footnotes": ""
    },
    {
      "id": 2,
      "verse_number": 2,
      "page_number": 577,
      "verse_key": "75:2",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَلَآ أُقۡسِمُ بِٱلنَّفۡسِ ٱللَّوَّامَةِ",
      "translation": "૨. અને ઠપકો આપનાર નફસની કસમ ખાઉં છું .",
      "footnotes": ""
    },
    {
      "id": 3,
      "verse_number": 3,
      "page_number": 577,
      "verse_key": "75:3",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "أَيَحۡسَبُ ٱلۡإِنسَٰنُ أَلَّن نَّجۡمَعَ عِظَامَهُۥ",
      "translation": "૩. શું માનવી એમ સમજે છે કે અમે તેના હાડકા ભેગા નહી કરી શકીએ?",
      "footnotes": ""
    },
    {
      "id": 4,
      "verse_number": 4,
      "page_number": 577,
      "verse_key": "75:4",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "بَلَىٰ قَٰدِرِينَ عَلَىٰٓ أَن نُّسَوِّيَ بَنَانَهُۥ",
      "translation": "૪. કેમ નહીં અમે આ વાત પર કુદરત ધરાવીએ છીએ કે તેના ટેરવા સુધ્ધા ઠીક કરી દઈશુ.",
      "footnotes": ""
    },
    {
      "id": 5,
      "verse_number": 5,
      "page_number": 577,
      "verse_key": "75:5",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "بَلۡ يُرِيدُ ٱلۡإِنسَٰنُ لِيَفۡجُرَ أَمَامَهُۥ",
      "translation": "૫. પરંતુ માનવી ઇચ્છે છે કે આગળ આગળ અવજ્ઞા કરતો રહે.",
      "footnotes": ""
    },
    {
      "id": 6,
      "verse_number": 6,
      "page_number": 577,
      "verse_key": "75:6",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "يَسۡـَٔلُ أَيَّانَ يَوۡمُ ٱلۡقِيَٰمَةِ",
      "translation": "૬. સવાલ કરે છે કે કયામતનો દિવસ કયારે આવશે.",
      "footnotes": ""
    },
    {
      "id": 7,
      "verse_number": 7,
      "page_number": 577,
      "verse_key": "75:7",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "فَإِذَا بَرِقَ ٱلۡبَصَرُ",
      "translation": "૭. તો (તેનો જવાબ એ છે કે)જ્યારે નજર પથરાઇ જશે.",
      "footnotes": ""
    },
    {
      "id": 8,
      "verse_number": 8,
      "page_number": 577,
      "verse_key": "75:8",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَخَسَفَ ٱلۡقَمَرُ",
      "translation": "૮. અને ચંદ્ર પ્રકાશહીન થઇ જશે.",
      "footnotes": ""
    },
    {
      "id": 9,
      "verse_number": 9,
      "page_number": 577,
      "verse_key": "75:9",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَجُمِعَ ٱلشَّمۡسُ وَٱلۡقَمَرُ",
      "translation": "૯. સૂર્ય અને ચંદ્ર ભેગા કરી દેવામાં આવશે.",
      "footnotes": ""
    },
    {
      "id": 10,
      "verse_number": 10,
      "page_number": 577,
      "verse_key": "75:10",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "يَقُولُ ٱلۡإِنسَٰنُ يَوۡمَئِذٍ أَيۡنَ ٱلۡمَفَرُّ",
      "translation": "૧૦. તે દિવસે માનવી કહેશે કે ક્યા ભાગીને જાવું?",
      "footnotes": ""
    },
    {
      "id": 11,
      "verse_number": 11,
      "page_number": 577,
      "verse_key": "75:11",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "كَلَّا لَا وَزَرَ",
      "translation": "૧૧. ના ના તેને કોઇ પનાહની જગ્યા નહીં મળે.",
      "footnotes": ""
    },
    {
      "id": 12,
      "verse_number": 12,
      "page_number": 577,
      "verse_key": "75:12",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ ٱلۡمُسۡتَقَرُّ",
      "translation": "૧૨. આજે તો તારા પાલનહાર તરફ જ રુકવાનું છે.",
      "footnotes": ""
    },
    {
      "id": 13,
      "verse_number": 13,
      "page_number": 577,
      "verse_key": "75:13",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "يُنَبَّؤُاْ ٱلۡإِنسَٰنُ يَوۡمَئِذِۭ بِمَا قَدَّمَ وَأَخَّرَ",
      "translation": "૧૩. તે દિવસે માનવીને જણાવવામાં આવશે કે તેણે આગળ શું મોકલ્યું છે અને પાછળ શું છોડ્યું છે?",
      "footnotes": ""
    },
    {
      "id": 14,
      "verse_number": 14,
      "page_number": 577,
      "verse_key": "75:14",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "بَلِ ٱلۡإِنسَٰنُ عَلَىٰ نَفۡسِهِۦ بَصِيرَةٞ",
      "translation": "૧૪. પરંતુ માનવી સ્વયં પોતે પોતાને જોવાવાળો છે.",
      "footnotes": ""
    },
    {
      "id": 15,
      "verse_number": 15,
      "page_number": 577,
      "verse_key": "75:15",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَلَوۡ أَلۡقَىٰ مَعَاذِيرَهُۥ",
      "translation": "૧૫. ભલેને તે કેટલાય બહાના રજૂ કેમ ન કરે.",
      "footnotes": ""
    },
    {
      "id": 16,
      "verse_number": 16,
      "page_number": 577,
      "verse_key": "75:16",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "لَا تُحَرِّكۡ بِهِۦ لِسَانَكَ لِتَعۡجَلَ بِهِۦٓ",
      "translation": "૧૬. (હે પયગંબર) તમે કુરઆન મજીદને જલ્દી (યાદ કરવા) માટે પોતાની જબાનને હલાવો નહીં.",
      "footnotes": ""
    },
    {
      "id": 17,
      "verse_number": 17,
      "page_number": 577,
      "verse_key": "75:17",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "إِنَّ عَلَيۡنَا جَمۡعَهُۥ وَقُرۡءَانَهُۥ",
      "translation": "૧૭. તેનું ભેગું કરવું અને (તમારી જબાનથી) પઢાવવું અમારા શિરે છે.",
      "footnotes": ""
    },
    {
      "id": 18,
      "verse_number": 18,
      "page_number": 577,
      "verse_key": "75:18",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "فَإِذَا قَرَأۡنَٰهُ فَٱتَّبِعۡ قُرۡءَانَهُۥ",
      "translation": "૧૮. પછી જ્યારે અમે તમને પઢાવી દઈએ તો પછી તેવી જ રીતે પઢો.",
      "footnotes": ""
    },
    {
      "id": 19,
      "verse_number": 19,
      "page_number": 577,
      "verse_key": "75:19",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "ثُمَّ إِنَّ عَلَيۡنَا بَيَانَهُۥ",
      "translation": "૧૯. પછી આનો (અર્થ) સ્પષ્ટ કરી દેવો પણ અમારા શિરે છે.",
      "footnotes": ""
    },
    {
      "id": 20,
      "verse_number": 20,
      "page_number": 578,
      "verse_key": "75:20",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "كَلَّا بَلۡ تُحِبُّونَ ٱلۡعَاجِلَةَ",
      "translation": "૨૦. ના ના, (સાચી વાત એ છે કે) તમે ઝડપથી મળવાવાળી (દુનિયા) થી પ્રેમ કરો છો.",
      "footnotes": ""
    },
    {
      "id": 21,
      "verse_number": 21,
      "page_number": 578,
      "verse_key": "75:21",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَتَذَرُونَ ٱلۡأٓخِرَةَ",
      "translation": "૨૧. અને આખિરતને છોડી બેઠા છો.",
      "footnotes": ""
    },
    {
      "id": 22,
      "verse_number": 22,
      "page_number": 578,
      "verse_key": "75:22",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وُجُوهٞ يَوۡمَئِذٖ نَّاضِرَةٌ",
      "translation": "૨૨. તે દિવસે ઘણા ચહેરા તાજગીભર્યા હશે.",
      "footnotes": ""
    },
    {
      "id": 23,
      "verse_number": 23,
      "page_number": 578,
      "verse_key": "75:23",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "إِلَىٰ رَبِّهَا نَاظِرَةٞ",
      "translation": "૨૩. પોતાના પાલનહાર તરફ જોઇ રહ્યા હશે.",
      "footnotes": ""
    },
    {
      "id": 24,
      "verse_number": 24,
      "page_number": 578,
      "verse_key": "75:24",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَوُجُوهٞ يَوۡمَئِذِۭ بَاسِرَةٞ",
      "translation": "૨૪. અને કેટલાક ચહેરા તે દિવસે ઉદાસ હશે.",
      "footnotes": ""
    },
    {
      "id": 25,
      "verse_number": 25,
      "page_number": 578,
      "verse_key": "75:25",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "تَظُنُّ أَن يُفۡعَلَ بِهَا فَاقِرَةٞ",
      "translation": "૨૫. સમજતા હશે કે તેમની સાથે કમર તોડી નાખનારો વ્યવહાર કરવામાં આવશે.",
      "footnotes": ""
    },
    {
      "id": 26,
      "verse_number": 26,
      "page_number": 578,
      "verse_key": "75:26",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "كَلَّآ إِذَا بَلَغَتِ ٱلتَّرَاقِيَ",
      "translation": "૨૬. ના ના જ્યારે જીવ ગળા સુધી પહોંચી જશે.",
      "footnotes": ""
    },
    {
      "id": 27,
      "verse_number": 27,
      "page_number": 578,
      "verse_key": "75:27",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَقِيلَ مَنۡۜ رَاقٖ",
      "translation": "૨૭. અને કહેવામાં આવશે કે કોઇ મંત્ર-તંત્ર કરનાર છે?",
      "footnotes": ""
    },
    {
      "id": 28,
      "verse_number": 28,
      "page_number": 578,
      "verse_key": "75:28",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَظَنَّ أَنَّهُ ٱلۡفِرَاقُ",
      "translation": "૨૮. અને મૃત્યુ પામનારને યકીન થઇ જાય છે કે આ તેની જુદાઈનો સમય છે.",
      "footnotes": ""
    },
    {
      "id": 29,
      "verse_number": 29,
      "page_number": 578,
      "verse_key": "75:29",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَٱلۡتَفَّتِ ٱلسَّاقُ بِٱلسَّاقِ",
      "translation": "૨૯. અને એક પિંડલી બીજી પિંડલી સાથે ભેગી થઇ જશે.",
      "footnotes": ""
    },
    {
      "id": 30,
      "verse_number": 30,
      "page_number": 578,
      "verse_key": "75:30",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ ٱلۡمَسَاقُ",
      "translation": "૩૦. આજે તારા પાલનહાર તરફ ફરવાનું છે.",
      "footnotes": ""
    },
    {
      "id": 31,
      "verse_number": 31,
      "page_number": 578,
      "verse_key": "75:31",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "فَلَا صَدَّقَ وَلَا صَلَّىٰ",
      "translation": "૩૧. તેણે ન તો પુષ્ટિ કરી અને ન તો નમાઝ પઢી.",
      "footnotes": ""
    },
    {
      "id": 32,
      "verse_number": 32,
      "page_number": 578,
      "verse_key": "75:32",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "وَلَٰكِن كَذَّبَ وَتَوَلَّىٰ",
      "translation": "૩૨. પરંતુ સત્યને જુઠલાવ્યુ અને મોઢું ફેરવી લીધું.",
      "footnotes": ""
    },
    {
      "id": 33,
      "verse_number": 33,
      "page_number": 578,
      "verse_key": "75:33",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "ثُمَّ ذَهَبَ إِلَىٰٓ أَهۡلِهِۦ يَتَمَطَّىٰٓ",
      "translation": "૩૩. પછી પોતાના ઘરવાળાઓ પાસે ઇતરાઇને ગયો.",
      "footnotes": ""
    },
    {
      "id": 34,
      "verse_number": 34,
      "page_number": 578,
      "verse_key": "75:34",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "أَوۡلَىٰ لَكَ فَأَوۡلَىٰ",
      "translation": "૩૪. ખેદ છે તારા પર, અફસોસ છે તારા પર.",
      "footnotes": ""
    },
    {
      "id": 35,
      "verse_number": 35,
      "page_number": 578,
      "verse_key": "75:35",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "ثُمَّ أَوۡلَىٰ لَكَ فَأَوۡلَىٰٓ",
      "translation": "૩૫. પછી ખેદ છે તારા પર અને અફસોસ છે તારા માટે.",
      "footnotes": ""
    },
    {
      "id": 36,
      "verse_number": 36,
      "page_number": 578,
      "verse_key": "75:36",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "أَيَحۡسَبُ ٱلۡإِنسَٰنُ أَن يُتۡرَكَ سُدًى",
      "translation": "૩૬. શું માનવી એમ સમજે છે કે તેને આમ જ નિરર્થક છોડી દેવામાં આવશે.",
      "footnotes": ""
    },
    {
      "id": 37,
      "verse_number": 37,
      "page_number": 578,
      "verse_key": "75:37",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "أَلَمۡ يَكُ نُطۡفَةٗ مِّن مَّنِيّٖ يُمۡنَىٰ",
      "translation": "૩૭. શું તે વીર્યનું એક ટીપું ન હતો, જે ટપકાવવામાં આવ્યું હતું.",
      "footnotes": ""
    },
    {
      "id": 38,
      "verse_number": 38,
      "page_number": 578,
      "verse_key": "75:38",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "ثُمَّ كَانَ عَلَقَةٗ فَخَلَقَ فَسَوَّىٰ",
      "translation": "૩૮. પછી તે લોહીનો લોચો બની ગયો, પછી અલ્લાહએ તેને ઠીક માનવી બનાવ્યો.",
      "footnotes": ""
    },
    {
      "id": 39,
      "verse_number": 39,
      "page_number": 578,
      "verse_key": "75:39",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "فَجَعَلَ مِنۡهُ ٱلزَّوۡجَيۡنِ ٱلذَّكَرَ وَٱلۡأُنثَىٰٓ",
      "translation": "૩૯. પછી તેનાથી જોડકાં એટલે કે નર અને માદા બનાવ્યા.",
      "footnotes": ""
    },
    {
      "id": 40,
      "verse_number": 40,
      "page_number": 578,
      "verse_key": "75:40",
      "juz_number": 29,
      "hizb_number": 58,
      "rub_el_hizb_number": 231,
      "sajdah_type": null,
      "sajdah_number": null,
      "text": "أَلَيۡسَ ذَٰلِكَ بِقَٰدِرٍ عَلَىٰٓ أَن يُحۡـِۧيَ ٱلۡمَوۡتَىٰ",
      "translation": "૪૦. શું (અલ્લાહ તઆલા) તે (વાત) પર કુદરત નથી ધરાવતો કે મૃતકને ફરી જીવિત કરી દે?",
      "footnotes": ""
    }
  ]
}