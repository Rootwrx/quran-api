{
  "verses": [
    {
      "number": "1",
      "arabic_text": "ٱلۡقَارِعَةُ",
      "translation": "کھڑکھڑا دینے والی.(1)"
    },
    {
      "number": "2",
      "arabic_text": "مَا ٱلۡقَارِعَةُ",
      "translation": "کیا(1) ہے وه کھڑکھڑا دینے والی."
    },
    {
      "number": "3",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلۡقَارِعَةُ",
      "translation": "تجھے کیا معلوم کہ وه کھڑ کھڑا دینے والی کیا ہے."
    },
    {
      "number": "4",
      "arabic_text": "يَوۡمَ يَكُونُ ٱلنَّاسُ كَٱلۡفَرَاشِ ٱلۡمَبۡثُوثِ",
      "translation": "جس دن انسان بکھرے ہوئے پروانوں کی طرح ہو جائیں گے.(1)"
    },
    {
      "number": "5",
      "arabic_text": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ ٱلۡمَنفُوشِ",
      "translation": "اور پہاڑ دھنے ہوئے رنگین اون کی طرح ہو جائیں گے.(1)"
    },
    {
      "number": "6",
      "arabic_text": "فَأَمَّا مَن ثَقُلَتۡ مَوَٰزِينُهُۥ",
      "translation": "پھر جس کے پلڑے بھاری ہوں گے.(1)"
    },
    {
      "number": "7",
      "arabic_text": "فَهُوَ فِي عِيشَةٖ رَّاضِيَةٖ",
      "translation": "وه تو دل پسند آرام کی زندگی میں ہوگا.(1)"
    },
    {
      "number": "8",
      "arabic_text": "وَأَمَّا مَنۡ خَفَّتۡ مَوَٰزِينُهُۥ",
      "translation": "اور جس کے پلڑے ہلکے ہوں گے.(1)"
    },
    {
      "number": "9",
      "arabic_text": "فَأُمُّهُۥ هَاوِيَةٞ",
      "translation": "اس کا ٹھکانا ہاویہ ہے.(1)"
    },
    {
      "number": "10",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا هِيَهۡ",
      "translation": "تجھے کیا معلوم کہ وه کیا ہے.(1)"
    },
    {
      "number": "11",
      "arabic_text": "نَارٌ حَامِيَةُۢ",
      "translation": "وه تند وتیز آگ (ہے).(1)"
    }
  ]
}