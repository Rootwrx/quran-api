{
  "verses": [
    {
      "number": "1",
      "arabic_text": "وَٱلضُّحَىٰ",
      "translation": "قسم ہے چاشت کے وقت کی.(1)"
    },
    {
      "number": "2",
      "arabic_text": "وَٱلَّيۡلِ إِذَا سَجَىٰ",
      "translation": "اور قسم ہے رات کی جب چھا جائے.(1)"
    },
    {
      "number": "3",
      "arabic_text": "مَا وَدَّعَكَ رَبُّكَ وَمَا قَلَىٰ",
      "translation": "نہ تو تیرے رب نے تجھے چھوڑا ہے اور نہ وه بیزار ہو گیا ہے.(1)"
    },
    {
      "number": "4",
      "arabic_text": "وَلَلۡأٓخِرَةُ خَيۡرٞ لَّكَ مِنَ ٱلۡأُولَىٰ",
      "translation": "یقیناً تیرے لئے انجام آغاز سے بہتر ہوگا.(1)"
    },
    {
      "number": "5",
      "arabic_text": "وَلَسَوۡفَ يُعۡطِيكَ رَبُّكَ فَتَرۡضَىٰٓ",
      "translation": "تجھے تیرا رب بہت جلد (انعام) دے گا اور تو راضی (وخوش) ہو جائے گا.(1)"
    },
    {
      "number": "6",
      "arabic_text": "أَلَمۡ يَجِدۡكَ يَتِيمٗا فَـَٔاوَىٰ",
      "translation": "کیا اس نے تجھے یتیم پا کر جگہ نہیں دی.(1)"
    },
    {
      "number": "7",
      "arabic_text": "وَوَجَدَكَ ضَآلّٗا فَهَدَىٰ",
      "translation": "اور تجھے راه بھوﻻ پا کر ہدایت نہیں دی.(1)"
    },
    {
      "number": "8",
      "arabic_text": "وَوَجَدَكَ عَآئِلٗا فَأَغۡنَىٰ",
      "translation": "اور تجھے نادار پاکر تونگر نہیں بنا دیا؟(1)"
    },
    {
      "number": "9",
      "arabic_text": "فَأَمَّا ٱلۡيَتِيمَ فَلَا تَقۡهَرۡ",
      "translation": "پس یتیم پر تو بھی سختی نہ کیا کر.(1)"
    },
    {
      "number": "10",
      "arabic_text": "وَأَمَّا ٱلسَّآئِلَ فَلَا تَنۡهَرۡ",
      "translation": "اور نہ سوال کرنے والے کو ڈانٹ ڈپٹ.(1)"
    },
    {
      "number": "11",
      "arabic_text": "وَأَمَّا بِنِعۡمَةِ رَبِّكَ فَحَدِّثۡ",
      "translation": "اور اپنے رب کی نعمتوں کو بیان کرتا ره.(1)"
    }
  ]
}