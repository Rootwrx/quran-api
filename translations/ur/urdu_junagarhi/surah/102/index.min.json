{
  "verses": [
    {
      "number": "1",
      "arabic_text": "أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ",
      "translation": "زیادتی کی چاہت نے تمہیں غافل کردیا.(1)"
    },
    {
      "number": "2",
      "arabic_text": "حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ",
      "translation": "یہاں تک کہ تم قبرستان جا پہنچے.(1)"
    },
    {
      "number": "3",
      "arabic_text": "كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "ہرگز نہیں(1) تم عنقریب معلوم کر لو گے."
    },
    {
      "number": "4",
      "arabic_text": "ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "ہرگز نہیں پھر تمہیں جلد علم ہو جائے گا.(1)"
    },
    {
      "number": "5",
      "arabic_text": "كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ",
      "translation": "ہرگز نہیں اگر تم یقینی طور پر جان لو.(1)"
    },
    {
      "number": "6",
      "arabic_text": "لَتَرَوُنَّ ٱلۡجَحِيمَ",
      "translation": "تو بیشک تم جہنم دیکھ لو گے.(1)"
    },
    {
      "number": "7",
      "arabic_text": "ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ",
      "translation": "اور تم اسے یقین کی آنکھ سے دیکھ لو گے.(1)"
    },
    {
      "number": "8",
      "arabic_text": "ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ",
      "translation": "پھر اس دن تم سے ضرور بالضرور نعمتوں کا سوال ہوگا.(1)"
    }
  ]
}