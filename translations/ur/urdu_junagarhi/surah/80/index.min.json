{
  "verses": [
    {
      "number": "1",
      "arabic_text": "عَبَسَ وَتَوَلَّىٰٓ",
      "translation": "وه ترش رو ہوا اور منھ موڑ لیا."
    },
    {
      "number": "2",
      "arabic_text": "أَن جَآءَهُ ٱلۡأَعۡمَىٰ",
      "translation": "(صرف اس لئے) کہ اس کے پاس ایک نابینا آیا.(1)"
    },
    {
      "number": "3",
      "arabic_text": "وَمَا يُدۡرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
      "translation": "تجھے کیا خبر شاید وه سنور جاتا.(1)"
    },
    {
      "number": "4",
      "arabic_text": "أَوۡ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكۡرَىٰٓ",
      "translation": "یا نصیحت سنتا اور اسے نصیحت فائده پہنچاتی."
    },
    {
      "number": "5",
      "arabic_text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ",
      "translation": "جو بے پرواہی کرتا ہے.(1)"
    },
    {
      "number": "6",
      "arabic_text": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
      "translation": "اس کی طرف تو تو پوری توجہ کرتا ہے.(1)"
    },
    {
      "number": "7",
      "arabic_text": "وَمَا عَلَيۡكَ أَلَّا يَزَّكَّىٰ",
      "translation": "حاﻻنکہ اس کے نہ سنورنے سے تجھ پر کوئی الزام نہیں.(1)"
    },
    {
      "number": "8",
      "arabic_text": "وَأَمَّا مَن جَآءَكَ يَسۡعَىٰ",
      "translation": "اور جو شخص تیرے پاس دوڑتا ہوا آتا ہے.(1)"
    },
    {
      "number": "9",
      "arabic_text": "وَهُوَ يَخۡشَىٰ",
      "translation": "اور وه ڈر (بھی) رہا ہے.(1)"
    },
    {
      "number": "10",
      "arabic_text": "فَأَنتَ عَنۡهُ تَلَهَّىٰ",
      "translation": "تو اس سے بےرخی برتتا ہے.(1)"
    },
    {
      "number": "11",
      "arabic_text": "كَلَّآ إِنَّهَا تَذۡكِرَةٞ",
      "translation": "یہ ٹھیک نہیں(1) قرآن تو نصیحت (کی چیز) ہے."
    },
    {
      "number": "12",
      "arabic_text": "فَمَن شَآءَ ذَكَرَهُۥ",
      "translation": "جو چاہے اس سے نصیحت لے.(1)"
    },
    {
      "number": "13",
      "arabic_text": "فِي صُحُفٖ مُّكَرَّمَةٖ",
      "translation": "(یہ تو) پر عظمت صحیفوں میں (ہے).(1)"
    },
    {
      "number": "14",
      "arabic_text": "مَّرۡفُوعَةٖ مُّطَهَّرَةِۭ",
      "translation": "جو بلند وباﻻ اور پاک صاف ہے.(1)"
    },
    {
      "number": "15",
      "arabic_text": "بِأَيۡدِي سَفَرَةٖ",
      "translation": "ایسے لکھنے والوں کے ہاتھوں میں ہے.(1)"
    },
    {
      "number": "16",
      "arabic_text": "كِرَامِۭ بَرَرَةٖ",
      "translation": "جو بزرگ اور پاکباز ہیں.(1)"
    },
    {
      "number": "17",
      "arabic_text": "قُتِلَ ٱلۡإِنسَٰنُ مَآ أَكۡفَرَهُۥ",
      "translation": "اللہ کی مار انسان پر کیسا ناشکرا ہے.(1)"
    },
    {
      "number": "18",
      "arabic_text": "مِنۡ أَيِّ شَيۡءٍ خَلَقَهُۥ",
      "translation": "اسے اللہ نے کس چیز سے پیدا کیا."
    },
    {
      "number": "19",
      "arabic_text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
      "translation": "اسے) ایک نطفہ(1) سے پیدا کیا،پھراس کا اندازہ مقررکیا .(2)"
    },
    {
      "number": "20",
      "arabic_text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
      "translation": "پھر اس کے لئے راستہ آسان کیا.(1)"
    },
    {
      "number": "21",
      "arabic_text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ",
      "translation": "پھر اسے موت دی اور پھر قبر میں دفن کیا."
    },
    {
      "number": "22",
      "arabic_text": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
      "translation": "پھر جب چاہے گا اسے زنده کر دے گا.(1)"
    },
    {
      "number": "23",
      "arabic_text": "كَلَّا لَمَّا يَقۡضِ مَآ أَمَرَهُۥ",
      "translation": "ہرگز نہیں(1) ۔ اس نے اب تک اللہ کے حکم کی بجا آوری نہیں کی."
    },
    {
      "number": "24",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ",
      "translation": "انسان کو چاہئے کہ اپنے کھانے کو دیکھے.(1)"
    },
    {
      "number": "25",
      "arabic_text": "أَنَّا صَبَبۡنَا ٱلۡمَآءَ صَبّٗا",
      "translation": "کہ ہم نے خوب پانی برسایا."
    },
    {
      "number": "26",
      "arabic_text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقّٗا",
      "translation": "پھر پھاڑا زمین کو اچھی طرح."
    },
    {
      "number": "27",
      "arabic_text": "فَأَنۢبَتۡنَا فِيهَا حَبّٗا",
      "translation": "پھر اس میں سے اناج اگائے."
    },
    {
      "number": "28",
      "arabic_text": "وَعِنَبٗا وَقَضۡبٗا",
      "translation": "اور انگور اور ترکاری."
    },
    {
      "number": "29",
      "arabic_text": "وَزَيۡتُونٗا وَنَخۡلٗا",
      "translation": "اور زیتون اور کھجور."
    },
    {
      "number": "30",
      "arabic_text": "وَحَدَآئِقَ غُلۡبٗا",
      "translation": "اور گنجان باغات."
    },
    {
      "number": "31",
      "arabic_text": "وَفَٰكِهَةٗ وَأَبّٗا",
      "translation": "اور میوه اور (گھاس) چاره (بھی اگایا).(1)"
    },
    {
      "number": "32",
      "arabic_text": "مَّتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ",
      "translation": "تمہارے استعمال وفائدے کے لئے اور تمہارے چوپایوں کے لئے."
    },
    {
      "number": "33",
      "arabic_text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
      "translation": "پس جب کہ کان بہرے کر دینے والی (قیامت) آجائے گی.(1)"
    },
    {
      "number": "34",
      "arabic_text": "يَوۡمَ يَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِيهِ",
      "translation": "اس دن آدمی اپنے بھائی سے."
    },
    {
      "number": "35",
      "arabic_text": "وَأُمِّهِۦ وَأَبِيهِ",
      "translation": "اور اپنی ماں اور اپنے باپ سے."
    },
    {
      "number": "36",
      "arabic_text": "وَصَٰحِبَتِهِۦ وَبَنِيهِ",
      "translation": "اور اپنی بیوی اور اپنی اوﻻد سے بھاگے گا."
    },
    {
      "number": "37",
      "arabic_text": "لِكُلِّ ٱمۡرِيٕٖ مِّنۡهُمۡ يَوۡمَئِذٖ شَأۡنٞ يُغۡنِيهِ",
      "translation": "ان میں سے ہر ایک کو اس دن ایسی فکر (دامن گیر) ہوگی جو اس کے لئے کافی ہوگی.(1)"
    },
    {
      "number": "38",
      "arabic_text": "وُجُوهٞ يَوۡمَئِذٖ مُّسۡفِرَةٞ",
      "translation": "اس دن بہت سے چہرے روشن ہوں گے."
    },
    {
      "number": "39",
      "arabic_text": "ضَاحِكَةٞ مُّسۡتَبۡشِرَةٞ",
      "translation": "(جو) ہنستے ہوئے اور ہشاش بشاش ہوں گے.(1)"
    },
    {
      "number": "40",
      "arabic_text": "وَوُجُوهٞ يَوۡمَئِذٍ عَلَيۡهَا غَبَرَةٞ",
      "translation": "اور بہت سے چہرے اس دن غبار آلود ہوں گے."
    },
    {
      "number": "41",
      "arabic_text": "تَرۡهَقُهَا قَتَرَةٌ",
      "translation": "جن پر سیاہی چڑھی ہوئی ہوگی.(1)"
    },
    {
      "number": "42",
      "arabic_text": "أُوْلَٰٓئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ",
      "translation": "وه یہی کافر بدکردار لوگ ہوں گے.(1)"
    }
  ]
}