{
  "verses": [
    {
      "number": "1",
      "arabic_text": "وَٱلسَّمَآءِ وَٱلطَّارِقِ",
      "translation": "M wẽn ne saagã la ne yʋng pukdã (ãdgã)."
    },
    {
      "number": "2",
      "arabic_text": "وَمَآ أَدۡرَىٰكَ مَا ٱلطَّارِقُ",
      "translation": "La bõe n wilg foom, bõe la yʋng pukdã."
    },
    {
      "number": "3",
      "arabic_text": "ٱلنَّجۡمُ ٱلثَّاقِبُ",
      "translation": "Yaa ãd-witga."
    },
    {
      "number": "4",
      "arabic_text": "إِن كُلُّ نَفۡسٖ لَّمَّا عَلَيۡهَا حَافِظٞ",
      "translation": "Ad yõor fãa, a tara gũusda."
    },
    {
      "number": "5",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ مِمَّ خُلِقَ",
      "translation": "Bɩ ninsaal ges bõe la b naan ne-a."
    },
    {
      "number": "6",
      "arabic_text": "خُلِقَ مِن مَّآءٖ دَافِقٖ",
      "translation": "B naan-a lame ne ko-tusdga."
    },
    {
      "number": "7",
      "arabic_text": "يَخۡرُجُ مِنۢ بَيۡنِ ٱلصُّلۡبِ وَٱلتَّرَآئِبِ",
      "translation": "A yita rɑo poorẽ ne pɑg kokolondẽ (yãoogã kõbɑ) sʋka."
    },
    {
      "number": "8",
      "arabic_text": "إِنَّهُۥ عَلَىٰ رَجۡعِهِۦ لَقَادِرٞ",
      "translation": "Ad Yẽnda yaa tõogd ne a lebsgo."
    },
    {
      "number": "9",
      "arabic_text": "يَوۡمَ تُبۡلَى ٱلسَّرَآئِرُ",
      "translation": "Raar ning yεl-soondɩ sẽn na n vẽnege."
    },
    {
      "number": "10",
      "arabic_text": "فَمَا لَهُۥ مِن قُوَّةٖ وَلَا نَاصِرٖ",
      "translation": "T'a pa tar pãnga, a pa tar sõangda."
    },
    {
      "number": "11",
      "arabic_text": "وَٱلسَّمَآءِ ذَاتِ ٱلرَّجۡعِ",
      "translation": "La M wẽen ne saagã sẽn yaa sɑ-koom sikdã."
    },
    {
      "number": "12",
      "arabic_text": "وَٱلۡأَرۡضِ ذَاتِ ٱلصَّدۡعِ",
      "translation": "La ne Tẽngã sẽn yaa pãrgdã."
    },
    {
      "number": "13",
      "arabic_text": "إِنَّهُۥ لَقَوۡلٞ فَصۡلٞ",
      "translation": "Ad yãoã yaa welgr koεεga."
    },
    {
      "number": "14",
      "arabic_text": "وَمَا هُوَ بِٱلۡهَزۡلِ",
      "translation": "A pa reem ye."
    },
    {
      "number": "15",
      "arabic_text": "إِنَّهُمۡ يَكِيدُونَ كَيۡدٗا",
      "translation": "Ad bãmbã rabsda rabre."
    },
    {
      "number": "16",
      "arabic_text": "وَأَكِيدُ كَيۡدٗا",
      "translation": "Tɩ Ma me rabsd rabre."
    },
    {
      "number": "17",
      "arabic_text": "فَمَهِّلِ ٱلۡكَٰفِرِينَ أَمۡهِلۡهُمۡ رُوَيۡدَۢا",
      "translation": "Bɩ f yaoolg kɩfr-dãmbã, yaoolg-b bilfu, lɑ f rɑ yãg ne b nɑngã lɑ b hɑlkrã ye."
    }
  ]
}