{
  "verses": [
    {
      "number": "1",
      "arabic_text": "ٱقۡرَأۡ بِٱسۡمِ رَبِّكَ ٱلَّذِي خَلَقَ",
      "translation": "Karem ne f Soab ning sẽn naan-a wã yʋʋre."
    },
    {
      "number": "2",
      "arabic_text": "خَلَقَ ٱلۡإِنسَٰنَ مِنۡ عَلَقٍ",
      "translation": "A naana ninsaal n yi zɩ-pelle."
    },
    {
      "number": "3",
      "arabic_text": "ٱقۡرَأۡ وَرَبُّكَ ٱلۡأَكۡرَمُ",
      "translation": "Karem, tɩ fo Soabã n yɩɩd ne kũuni."
    },
    {
      "number": "4",
      "arabic_text": "ٱلَّذِي عَلَّمَ بِٱلۡقَلَمِ",
      "translation": "Sẽn wilg-a gʋlsg ne kaal-moogã."
    },
    {
      "number": "5",
      "arabic_text": "عَلَّمَ ٱلۡإِنسَٰنَ مَا لَمۡ يَعۡلَمۡ",
      "translation": "A wilga ninsaal bũmb ning a sẽn pa mi."
    },
    {
      "number": "6",
      "arabic_text": "كَلَّآ إِنَّ ٱلۡإِنسَٰنَ لَيَطۡغَىٰٓ",
      "translation": "Ka woto ye, ad ninsaal yaa kεdgda."
    },
    {
      "number": "7",
      "arabic_text": "أَن رَّءَاهُ ٱسۡتَغۡنَىٰٓ",
      "translation": "A sã n yã t'a seka a menga."
    },
    {
      "number": "8",
      "arabic_text": "إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجۡعَىٰٓ",
      "translation": "Ad lεbengã pata f Soabã nengẽ."
    },
    {
      "number": "9",
      "arabic_text": "أَرَءَيۡتَ ٱلَّذِي يَنۡهَىٰ",
      "translation": "F yãɑ yel-solemd sẽn le yɩɩd ned ning(Abʋʋgεhl) sẽn gɩdgde."
    },
    {
      "number": "10",
      "arabic_text": "عَبۡدًا إِذَا صَلَّىٰٓ",
      "translation": "Yambã (Mʋhɑmmɑd) t'a sã n wa pʋʋsdẽ?"
    },
    {
      "number": "11",
      "arabic_text": "أَرَءَيۡتَ إِن كَانَ عَلَى ٱلۡهُدَىٰٓ",
      "translation": "Fo yãame sã n mikɑme t'ɑ sẽn gɩdgd-ɑ wã sã n bee kãndgr zugu."
    },
    {
      "number": "12",
      "arabic_text": "أَوۡ أَمَرَ بِٱلتَّقۡوَىٰٓ",
      "translation": "Ma a sagla ne wẽn-zoεεga?"
    },
    {
      "number": "13",
      "arabic_text": "أَرَءَيۡتَ إِن كَذَّبَ وَتَوَلَّىٰٓ",
      "translation": "F yãame tɩ gɩdgdã sã n yagsame n gõd a zãn-kuidga."
    },
    {
      "number": "14",
      "arabic_text": "أَلَمۡ يَعۡلَم بِأَنَّ ٱللَّهَ يَرَىٰ",
      "translation": "Rẽ yĩnga a pa bãng tɩ Wẽnd nee ɑ sẽn tʋmdã?"
    },
    {
      "number": "15",
      "arabic_text": "كَلَّا لَئِن لَّمۡ يَنتَهِ لَنَسۡفَعَۢا بِٱلنَّاصِيَةِ",
      "translation": "Pa woto ye! Lak t'a sã n pa tek n bas, D na n veo-ɑ-la ne rĩirã zoobdẽ."
    },
    {
      "number": "16",
      "arabic_text": "نَاصِيَةٖ كَٰذِبَةٍ خَاطِئَةٖ",
      "translation": "Pʋ-yagd sẽn yaa tudgd rĩir zoobdo."
    },
    {
      "number": "17",
      "arabic_text": "فَلۡيَدۡعُ نَادِيَهُۥ",
      "translation": "Bɩ a bool a zĩ-zĩidsẽ rãmba."
    },
    {
      "number": "18",
      "arabic_text": "سَنَدۡعُ ٱلزَّبَانِيَةَ",
      "translation": "Tõnd na n boola D tãp-biisã."
    },
    {
      "number": "19",
      "arabic_text": "كَلَّا لَا تُطِعۡهُ وَٱسۡجُدۡۤ وَٱقۡتَرِب۩",
      "translation": "Pa woto ye! Ra tũ-a ye, la f tugli (maan suguudu) la f bao pẽnegre."
    }
  ]
}