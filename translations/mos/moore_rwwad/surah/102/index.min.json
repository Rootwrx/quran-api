{
  "verses": [
    {
      "number": "1",
      "arabic_text": "أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ",
      "translation": "Gees-taab ne arzεgse n liib yãmba n mɑɑn-y soɑglɑ."
    },
    {
      "number": "2",
      "arabic_text": "حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ",
      "translation": "Hal tɩ y wa tʋg n kaag yaado."
    },
    {
      "number": "3",
      "arabic_text": "كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "Pa woto ye! Y na wa n bãnge!"
    },
    {
      "number": "4",
      "arabic_text": "ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "translation": "Rẽ poorẽ pa woto ye! Y na wa n bãnge!"
    },
    {
      "number": "5",
      "arabic_text": "كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ",
      "translation": "Pa woto ye! Yãmb sã n da mii bãng-n-wãaka, (y kõon n mɑɑn soɑgl ne rẽ ye)."
    },
    {
      "number": "6",
      "arabic_text": "لَتَرَوُنَّ ٱلۡجَحِيمَ",
      "translation": "Lak y na yã Gεhɩɩmã."
    },
    {
      "number": "7",
      "arabic_text": "ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ",
      "translation": "Rẽ poorẽ, lakɩ y na yã-a ne nif vẽenega."
    },
    {
      "number": "8",
      "arabic_text": "ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ",
      "translation": "Rẽ poorẽ b na sok yãmba, raar-n-kãngã, neemã wã yelle."
    }
  ]
}