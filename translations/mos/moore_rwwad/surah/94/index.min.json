{
  "verses": [
    {
      "number": "1",
      "arabic_text": "أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ",
      "translation": "Rẽ yĩnga Tõnd pa yalg fo yãoogã n kõ-fo?"
    },
    {
      "number": "2",
      "arabic_text": "وَوَضَعۡنَا عَنكَ وِزۡرَكَ",
      "translation": "La D rok fo zɩɩbã(zũnuub) n bas-fo?"
    },
    {
      "number": "3",
      "arabic_text": "ٱلَّذِيٓ أَنقَضَ ظَهۡرَكَ",
      "translation": "Sẽn da zɩsg-a fo poorã?"
    },
    {
      "number": "4",
      "arabic_text": "وَرَفَعۡنَا لَكَ ذِكۡرَكَ",
      "translation": "La D zẽk fo yʋʋrã?"
    },
    {
      "number": "5",
      "arabic_text": "فَإِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًا",
      "translation": "Bɩ f bãng tɩ yol-yol pʋgda keelmã."
    },
    {
      "number": "6",
      "arabic_text": "إِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرٗا",
      "translation": "Ad yol-yol pʋgda keelmã"
    },
    {
      "number": "7",
      "arabic_text": "فَإِذَا فَرَغۡتَ فَٱنصَبۡ",
      "translation": "F sã n wa sε f tʋʋmã bɩ f yiki n nidg pãng ne f Soɑbã tũudum."
    },
    {
      "number": "8",
      "arabic_text": "وَإِلَىٰ رَبِّكَ فَٱرۡغَب",
      "translation": "La f maan yamleoog n tʋg f Soabã nengẽ."
    }
  ]
}