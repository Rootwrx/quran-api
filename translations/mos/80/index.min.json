{
  "verses": [
    {
      "number": "1",
      "arabic_text": "عَبَسَ وَتَوَلَّىٰٓ",
      "translation": "A gãnem a neng n gũd a zãn-kuidga."
    },
    {
      "number": "2",
      "arabic_text": "أَن جَآءَهُ ٱلۡأَعۡمَىٰ",
      "translation": "Tɩ zõangã waa a nengẽ."
    },
    {
      "number": "3",
      "arabic_text": "وَمَا يُدۡرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
      "translation": "La bõe n wilgd foo, sãnd-sãnde a na n yɩlgame?"
    },
    {
      "number": "4",
      "arabic_text": "أَوۡ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكۡرَىٰٓ",
      "translation": "Ma t'a tẽeg-a tɩ tẽegrã naf-a?"
    },
    {
      "number": "5",
      "arabic_text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ",
      "translation": "La ned ning sẽn sek a menga."
    },
    {
      "number": "6",
      "arabic_text": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
      "translation": "Tɩ fo yãgd a sεgbo,"
    },
    {
      "number": "7",
      "arabic_text": "وَمَا عَلَيۡكَ أَلَّا يَزَّكَّىٰ",
      "translation": "A pa kãndg pa pak foo ye."
    },
    {
      "number": "8",
      "arabic_text": "وَأَمَّا مَن جَآءَكَ يَسۡعَىٰ",
      "translation": "La sã n ya ned ning sẽn yãgd n wat fo nengẽ wã."
    },
    {
      "number": "9",
      "arabic_text": "وَهُوَ يَخۡشَىٰ",
      "translation": "Tɩ yẽnda yaa sẽn zoet Wẽnde."
    },
    {
      "number": "10",
      "arabic_text": "فَأَنتَ عَنۡهُ تَلَهَّىٰ",
      "translation": "Lɑ fo sẽn tar soagl ne kɩfr-dãmbã n bɑs ɑ sεgbã."
    },
    {
      "number": "11",
      "arabic_text": "كَلَّآ إِنَّهَا تَذۡكِرَةٞ",
      "translation": "Pa woto ye! Ad a yaa tẽegre."
    },
    {
      "number": "12",
      "arabic_text": "فَمَن شَآءَ ذَكَرَهُۥ",
      "translation": "Rẽnd ned ning sẽn tʋll-a bɩ a tẽeg-A, lɑ ɑ pɑɑm sɑgell ne Alkʋrãɑnã."
    },
    {
      "number": "13",
      "arabic_text": "فِي صُحُفٖ مُّكَرَّمَةٖ",
      "translation": "N be karaas-waoogds pʋsẽ."
    },
    {
      "number": "14",
      "arabic_text": "مَّرۡفُوعَةٖ مُّطَهَّرَةِۭ",
      "translation": "N zẽk n yɩlge."
    },
    {
      "number": "15",
      "arabic_text": "بِأَيۡدِي سَفَرَةٖ",
      "translation": "N be mɑlεgs nusẽ."
    },
    {
      "number": "16",
      "arabic_text": "كِرَامِۭ بَرَرَةٖ",
      "translation": "N yaa wagl n yaa sak-n-tũ-rãmba."
    },
    {
      "number": "17",
      "arabic_text": "قُتِلَ ٱلۡإِنسَٰنُ مَآ أَكۡفَرَهُۥ",
      "translation": "B kãaba ninsaal kɩfre, a sõm-zɩɩlmã yĩnga."
    },
    {
      "number": "18",
      "arabic_text": "مِنۡ أَيِّ شَيۡءٍ خَلَقَهُۥ",
      "translation": "Yaa bõe la A naan ne-a?"
    },
    {
      "number": "19",
      "arabic_text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
      "translation": "Yaa mani la A naan ne-a n kord-a."
    },
    {
      "number": "20",
      "arabic_text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
      "translation": "Rẽnda poorẽ n yols a sorã t'ɑ yi ɑ mɑ wã pʋgẽ."
    },
    {
      "number": "21",
      "arabic_text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ",
      "translation": "Rẽ poorẽ t'A kʋ-a n kẽes a kabrẽ."
    },
    {
      "number": "22",
      "arabic_text": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
      "translation": "Rẽnda poorẽ, A sã n wa tʋlle, A na n yik-a lame."
    },
    {
      "number": "23",
      "arabic_text": "كَلَّا لَمَّا يَقۡضِ مَآ أَمَرَهُۥ",
      "translation": "Pa woto ye! A pa tũ b sẽn sagl-a wã ye."
    },
    {
      "number": "24",
      "arabic_text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ",
      "translation": "Bɩ ninsaal ges a rɩɩbã, ɑ sẽn yɩt to-to."
    },
    {
      "number": "25",
      "arabic_text": "أَنَّا صَبَبۡنَا ٱلۡمَآءَ صَبّٗا",
      "translation": "Tɩ Tõnd kiigda koomã ne kiigri."
    },
    {
      "number": "26",
      "arabic_text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقّٗا",
      "translation": "Rẽ poorẽ n pãrg tẽngã pãrgr tεkẽ"
    },
    {
      "number": "27",
      "arabic_text": "فَأَنۢبَتۡنَا فِيهَا حَبّٗا",
      "translation": "N buls a pʋgẽ bõn-bεεla."
    },
    {
      "number": "28",
      "arabic_text": "وَعِنَبٗا وَقَضۡبٗا",
      "translation": "La sibã la yam-maasã (zẽ-biisi)."
    },
    {
      "number": "29",
      "arabic_text": "وَزَيۡتُونٗا وَنَخۡلٗا",
      "translation": "La Zaeentʋʋn (olɩvɩye) la tamar-tɩɩse."
    },
    {
      "number": "30",
      "arabic_text": "وَحَدَآئِقَ غُلۡبٗا",
      "translation": "La pʋt sẽn tob bĩmm."
    },
    {
      "number": "31",
      "arabic_text": "وَفَٰكِهَةٗ وَأَبّٗا",
      "translation": "La tɩ-biis la yamdo."
    },
    {
      "number": "32",
      "arabic_text": "مَّتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ",
      "translation": "Tɩ yaa wʋm-noog ne yãmb la y rũmsã."
    },
    {
      "number": "33",
      "arabic_text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
      "translation": "La tãs-kεgengã sã n wa."
    },
    {
      "number": "34",
      "arabic_text": "يَوۡمَ يَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِيهِ",
      "translation": "Raar ned sẽn na n zoe n bas a ma-biiga."
    },
    {
      "number": "35",
      "arabic_text": "وَأُمِّهِۦ وَأَبِيهِ",
      "translation": "La a ma, la a saamba."
    },
    {
      "number": "36",
      "arabic_text": "وَصَٰحِبَتِهِۦ وَبَنِيهِ",
      "translation": "La a pag la a koamba."
    },
    {
      "number": "37",
      "arabic_text": "لِكُلِّ ٱمۡرِيٕٖ مِّنۡهُمۡ يَوۡمَئِذٖ شَأۡنٞ يُغۡنِيهِ",
      "translation": "Ned fãa yell sεk-a-la raaren-kãngã."
    },
    {
      "number": "38",
      "arabic_text": "وُجُوهٞ يَوۡمَئِذٖ مُّسۡفِرَةٞ",
      "translation": "Raaren-kãngã, nems sẽn pɩnd bee be."
    },
    {
      "number": "39",
      "arabic_text": "ضَاحِكَةٞ مُّسۡتَبۡشِرَةٞ",
      "translation": "N yaa sẽn laade, n yaa sẽn yolse."
    },
    {
      "number": "40",
      "arabic_text": "وَوُجُوهٞ يَوۡمَئِذٍ عَلَيۡهَا غَبَرَةٞ",
      "translation": "Nems me sẽn yaa puddd bee raarã."
    },
    {
      "number": "41",
      "arabic_text": "تَرۡهَقُهَا قَتَرَةٌ",
      "translation": "Sablem n lud-ba."
    },
    {
      "number": "42",
      "arabic_text": "أُوْلَٰٓئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ",
      "translation": "Bãmb rãmbã la kɩfr-dãmbã n yaa nin-wẽnsã."
    }
  ]
}